---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import { t } from '@i18n/index';

// Static data - will be replaced with CMS data when connected
const editions = [
  { edition: 19, year: 2025, date: 'Maio 2025', venue: 'A anunciar', tunasCount: 4, hasAwards: true },
  { edition: 18, year: 2024, date: '4 Maio', venue: 'Viseu', tunasCount: 4, hasAwards: true },
  { edition: 17, year: 2023, date: '5-6 Maio', venue: 'Solar Vinhos do Dão / Aula Magna IPV', tunasCount: 4, hasAwards: true },
  { edition: 16, year: 2022, date: '29-30 Abril', venue: 'Viseu', tunasCount: 6, hasAwards: true },
  { edition: 15, year: 2019, date: '3-4 Maio', venue: 'Clube de Viseu / Aula Magna', tunasCount: 4, hasAwards: true },
  { edition: 14, year: 2018, date: '4-5 Maio', venue: 'Clube de Viseu / Aula Magna', tunasCount: 4, hasAwards: true, notes: '20 Anos - Tunadão Canta' },
  { edition: 13, year: 2017, date: '5-6 Maio', venue: 'Aula Magna IPV', tunasCount: 4, hasAwards: true },
  { edition: 12, year: 2016, date: '29-30 Abril', venue: 'Aula Magna do I.P.V. / Rua Formosa', tunasCount: 4, hasAwards: true },
  { edition: 11, year: 2015, date: '1-2 Maio', venue: 'Aula Magna I.P.V. / Rua Formosa', tunasCount: 4, hasAwards: true },
  { edition: 10, year: 2014, date: '2-3 Maio', venue: 'Aula Magna do I.P.V. / Rua Formosa', tunasCount: 5, hasAwards: true },
  { edition: 9, year: 2013, date: '3-4 Maio', venue: 'Aula Magna I.P.V. / Rua Formosa', tunasCount: 4, hasAwards: true, notes: '15 Anos - 1998-2013' },
  { edition: 8, year: 2012, date: '4-5 Maio', venue: 'Aula Magna do IPV / Rua Formosa', tunasCount: 4, hasAwards: true },
  { edition: 7, year: 2011, date: '29-30 Abril', venue: 'Aula Magna do I.P.V. / Rua Formosa', tunasCount: 4, hasAwards: true },
  { edition: 6, year: 2010, date: '30 Abril - 1 Maio', venue: 'Aula Magna do I.P.V.', tunasCount: 3, hasAwards: true },
  { edition: 5, year: 2009, date: '1-2 Maio', venue: 'Aula Magna IPV / Rua Formosa', tunasCount: 5, hasAwards: true },
  { edition: 4, year: 2008, date: '2-3 Maio', venue: 'Aula Magna ISPV / Rua Formosa', tunasCount: 5, hasAwards: false, notes: '10º Aniversário da Tunadão 1998' },
  { edition: 3, year: 2007, date: '23-24 Março', venue: 'Aula Magna do ISPV / Forum Viseu', tunasCount: 5, hasAwards: true },
  { edition: 2, year: 2005, date: '3-4 Novembro', venue: 'Aula Magna do ISPV', tunasCount: 5, hasAwards: false },
  { edition: 1, year: 2004, date: '4-5 Novembro', venue: 'Aula Magna do ISPV', tunasCount: 5, hasAwards: false },
];

const latestEdition = editions[0];
---

<Layout
  title={`${t('citadao.title')} | Tunadão 1998`}
  description="CITADÃO - Certame Internacional de Tunas Académicas do Dão. O festival de tunas organizado pela Tunadão desde 2004."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{t('citadao.title')}</h1>
      <p class="hero__subtitle">{t('citadao.subtitle')}</p>
    </div>
  </section>

  <!-- Latest Edition Highlight -->
  <section class="latest">
    <div class="container">
      <div class="latest__card">
        <div class="latest__badge">{latestEdition.edition}{t('citadao.edition')}</div>
        <h2 class="latest__title">CITADÃO {latestEdition.year}</h2>
        <div class="latest__info">
          <div class="latest__info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            <span>{latestEdition.date}</span>
          </div>
          <div class="latest__info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            <span>{latestEdition.venue}</span>
          </div>
        </div>
        <Button href={`/citadao/${latestEdition.year}`} variant="primary" size="lg">
          {t('citadao.viewDetails')}
        </Button>
      </div>
    </div>
  </section>

  <!-- About CITADÃO Section -->
  <section class="about-citadao">
    <div class="container">
      <div class="about-citadao__content">
        <h2>O que é o CITADÃO?</h2>
        <p>
          O <strong>CITADÃO - Certame Internacional de Tunas Académicas do Dão</strong> é um festival
          de tunas académicas organizado pela Tunadão desde 2004. Realizado anualmente em Viseu,
          o festival reúne as melhores tunas do país e convidados internacionais para dois dias
          de música, convívio e competição.
        </p>
        <p>
          Com {editions.length} edições realizadas, o CITADÃO tornou-se uma referência no panorama
          tunante nacional, premiando a excelência musical, a criatividade e o espírito académico.
        </p>
      </div>
    </div>
  </section>

  <!-- All Editions Grid -->
  <section class="editions">
    <div class="container">
      <h2 class="section-title">{t('citadao.allEditions')}</h2>
      <div class="editions__grid">
        {editions.map((edition) => (
          <a href={`/citadao/${edition.year}`} class="edition-card">
            <div class="edition-card__header">
              <span class="edition-card__edition">{edition.edition}º</span>
              <span class="edition-card__year">{edition.year}</span>
            </div>
            <div class="edition-card__body">
              <div class="edition-card__date">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                {edition.date}
              </div>
              <div class="edition-card__tunas">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
                {edition.tunasCount} tunas
              </div>
              {edition.notes && (
                <div class="edition-card__notes">{edition.notes}</div>
              )}
            </div>
            <div class="edition-card__footer">
              <span class="edition-card__link">{t('citadao.viewDetails')} →</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    text-align: center;
  }

  .hero__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Latest Edition */
  .latest {
    padding: var(--space-8) 0;
    background-color: var(--color-background);
    margin-top: -4rem;
    position: relative;
    z-index: 1;
  }

  .latest__card {
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: var(--shadow-lg);
  }

  .latest__badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .latest__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .latest__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 480px) {
    .latest__info {
      flex-direction: row;
      justify-content: center;
      gap: var(--space-6);
    }
  }

  .latest__info-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: var(--color-text-muted);
  }

  .latest__info-item svg {
    color: var(--color-primary);
  }

  /* About CITADÃO */
  .about-citadao {
    padding: var(--space-12) 0;
    background-color: var(--color-surface);
  }

  .about-citadao__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-citadao__content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  .about-citadao__content p {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .about-citadao__content p:last-child {
    margin-bottom: 0;
  }

  /* Section Title */
  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-8);
    color: var(--color-text);
    text-align: center;
  }

  /* Editions Grid */
  .editions {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .editions__grid {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .editions__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .editions__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1280px) {
    .editions__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .edition-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .edition-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .edition-card__header {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    padding: var(--space-4);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .edition-card__edition {
    font-size: var(--text-sm);
    font-weight: 500;
    opacity: 0.9;
  }

  .edition-card__year {
    font-size: var(--text-2xl);
    font-weight: 700;
  }

  .edition-card__body {
    padding: var(--space-4);
    flex-grow: 1;
  }

  .edition-card__date,
  .edition-card__tunas {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }

  .edition-card__date svg,
  .edition-card__tunas svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .edition-card__notes {
    margin-top: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-secondary);
    color: var(--color-text-inverted);
    font-size: var(--text-xs);
    font-weight: 500;
    border-radius: var(--radius-sm);
    text-align: center;
  }

  .edition-card__footer {
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .edition-card__link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }

  .edition-card:hover .edition-card__link {
    color: var(--color-primary-dark);
  }
</style>
