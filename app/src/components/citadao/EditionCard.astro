---
import ResponsiveImage from '@components/ResponsiveImage.astro';
import type { FrontendCitadaoEdition } from '@lib/cms/types';
import { extractPublicId } from '@lib/cms';
import { getLocalizedPath, type Language } from '@i18n/index';

interface Props {
  edition: FrontendCitadaoEdition;
  lang: Language;
  labels: {
    edition: string;
    viewDetails: string;
    venue: string;
  };
}

const { edition, lang, labels } = Astro.props;
const posterPublicId = edition.posterUrl ? extractPublicId(edition.posterUrl) : null;
const detailPath = getLocalizedPath(`/citadao/${edition.year}`, lang);
---

<article class="edition-card">
  <a href={detailPath} class="edition-link">
    <div class="edition-poster">
      {posterPublicId ? (
        <ResponsiveImage
          publicId={posterPublicId}
          alt={`Cartaz do ${edition.edition}º Citadão (${edition.year})`}
          class="poster-image"
          sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
          aspectRatio="2/3"
        />
      ) : edition.posterUrl ? (
        <img
          src={edition.posterUrl}
          alt={`Cartaz do ${edition.edition}º Citadão (${edition.year})`}
          class="poster-image"
          loading="lazy"
        />
      ) : (
        <div class="poster-placeholder" aria-hidden="true">
          <span class="edition-number-large">{edition.edition}</span>
        </div>
      )}
    </div>
    <div class="edition-content">
      <div class="edition-header">
        <h3 class="edition-title">
          {edition.edition}{labels.edition} CITADÃO
        </h3>
        <p class="edition-year">{edition.year}</p>
      </div>
      {edition.venue && (
        <p class="edition-venue">
          <span class="venue-label">{labels.venue}:</span> {edition.venue}
        </p>
      )}
      <div class="edition-cta">
        <span class="cta-text">{labels.viewDetails}</span>
        <svg
          class="cta-arrow"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </a>
</article>

<style>
  .edition-card {
    position: relative;
    background-color: var(--color-surface);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .edition-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .edition-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .edition-poster {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
    background-color: var(--color-background);
  }

  .poster-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .edition-card:hover .poster-image {
    transform: scale(1.05);
  }

  .poster-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .edition-number-large {
    font-family: var(--font-family-heading);
    font-size: 4rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.2);
    letter-spacing: -0.05em;
  }

  .edition-content {
    padding: var(--space-5);
  }

  .edition-header {
    margin-bottom: var(--space-2);
  }

  .edition-title {
    font-size: var(--text-xl);
    font-weight: 800;
    color: var(--color-primary);
    margin: 0 0 var(--space-1) 0;
    letter-spacing: -0.02em;
  }

  [data-theme='dark'] .edition-title {
    color: var(--color-accent-gold);
  }

  .edition-year {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text-muted);
    margin: 0;
  }

  .edition-venue {
    font-size: var(--text-sm);
    color: var(--color-text);
    margin: 0 0 var(--space-3) 0;
  }

  .venue-label {
    font-weight: 600;
    color: var(--color-text-muted);
  }

  .edition-cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    font-weight: 600;
    font-size: var(--text-sm);
    transition: gap 0.2s ease;
  }

  [data-theme='dark'] .edition-cta {
    color: var(--color-accent-gold);
  }

  .edition-card:hover .edition-cta {
    gap: var(--space-3);
  }

  .cta-arrow {
    transition: transform 0.2s ease;
  }

  .edition-card:hover .cta-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .edition-content {
      padding: var(--space-4);
    }

    .edition-title {
      font-size: var(--text-lg);
    }

    .edition-number-large {
      font-size: 3rem;
    }
  }
</style>
