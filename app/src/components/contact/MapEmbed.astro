---
interface Props {
  src: string;
  title: string;
  height?: number;
}

const { src, title, height = 250 } = Astro.props;
---

<div class="map-container">
  <iframe
    src={src}
    width="100%"
    height={height}
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title={title}></iframe>
</div>

<style>
  .map-container {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .map-container iframe {
    display: block;
  }
</style>
