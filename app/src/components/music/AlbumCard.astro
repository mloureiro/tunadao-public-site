---
interface Props {
  album: {
    id: string;
    title: string;
    year: number;
    spotifyAlbumId: string | undefined;
    description: string;
    type: string;
  };
  studioLabel: string;
  liveLabel: string;
}

const { album, studioLabel, liveLabel } = Astro.props;
---

<div class="album-card">
  <div class="album-card__info">
    <h3 class="album-card__title">{album.title}</h3>
    <div class="album-card__meta">
      <span class="album-card__year">{album.year}</span>
      <span class="album-card__type">
        {album.type === 'studio' ? studioLabel : liveLabel}
      </span>
    </div>
    <p class="album-card__description">{album.description}</p>
  </div>
  <div class="album-card__player">
    <iframe
      style="border-radius:12px"
      src={`https://open.spotify.com/embed/album/${album.spotifyAlbumId}?utm_source=generator&theme=0`}
      width="100%"
      height="352"
      frameborder="0"
      allowfullscreen=""
      allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
      loading="lazy"
    />
  </div>
</div>

<style>
  /* Album Card */
  .album-card {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    padding: var(--space-6);
  }

  .album-card__info {
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .album-card__title {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .album-card__meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .album-card__year {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-primary);
  }

  .album-card__type {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    background-color: var(--color-background);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .album-card__description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .album-card__player {
    border-radius: var(--radius-lg);
    overflow: hidden;
  }
</style>
