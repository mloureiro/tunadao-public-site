---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import ScrollIndicator from '@components/ScrollIndicator.astro';

interface Props {
  title: string;
  subtitle: string;
  text: string;
  heroPhoto: ImageMetadata;
  heroAlt: string;
}

const { title, subtitle, text, heroPhoto, heroAlt } = Astro.props;
---

<section class="hero" aria-label={title}>
  <div class="hero__image">
    <Image
      src={heroPhoto}
      alt={heroAlt}
      widths={[640, 1024, 1920, 2560]}
      sizes="100vw"
      loading="eager"
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content container">
    <h1 class="hero__title animate-fade-in">{title}</h1>
    <p class="hero__subtitle animate-fade-in-delay-1">{subtitle}</p>
    <p class="hero__text animate-fade-in-delay-2">{text}</p>
  </div>

  <ScrollIndicator />
</section>

<style>
  .hero {
    position: relative;
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero__image {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero__image :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.6),
      rgba(0, 0, 0, 0.7)
    );
  }

  .hero__content {
    position: relative;
    text-align: center;
    color: #ffffff;
    padding: var(--space-8) 0;
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: var(--font-weight-black);
    margin-bottom: var(--space-4);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .hero__subtitle {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent-gold);
    opacity: 0.95;
    margin-bottom: var(--space-4);
  }

  .hero__text {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    max-width: 700px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }
</style>
