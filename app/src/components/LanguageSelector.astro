---
import {
  languages,
  languageFlags,
  getLocalizedPath,
  type Language,
  defaultLang,
} from '@i18n/index';

interface Props {
  lang?: Language;
  currentPath?: string;
}

const { lang = defaultLang, currentPath = '/' } = Astro.props;

// Generate URLs for each language
const languageUrls = Object.keys(languages).reduce(
  (acc, code) => {
    acc[code] = getLocalizedPath(currentPath, code as Language, lang);
    return acc;
  },
  {} as Record<string, string>
);
---

<div class="lang-selector">
  <button class="lang-selector__btn" aria-label="Selecionar idioma" aria-expanded="false">
    <span class="lang-selector__flag">{languageFlags[lang]}</span>
    <span class="lang-selector__current">{lang.toUpperCase()}</span>
    <svg
      class="lang-selector__icon"
      xmlns="http://www.w3.org/2000/svg"
      width="14"
      height="14"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </button>
  <div class="lang-selector__dropdown" aria-hidden="true">
    {
      Object.entries(languages).map(([code, name]) => (
        <a
          href={languageUrls[code]}
          class={`lang-selector__option ${code === lang ? 'active' : ''}`}
          data-lang={code}
        >
          <span class="lang-selector__option-flag">{languageFlags[code]}</span>
          <span class="lang-selector__code">{code.toUpperCase()}</span>
          <span class="lang-selector__name">{name}</span>
        </a>
      ))
    }
  </div>
</div>

<style>
  .lang-selector {
    position: relative;
  }

  .lang-selector__btn {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-2);
    background: transparent;
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    transition: background-color var(--transition-fast);
    cursor: pointer;
  }

  .lang-selector__btn:hover {
    background-color: var(--color-neutral-100);
  }

  :global([data-theme='dark']) .lang-selector__btn:hover {
    background-color: var(--color-surface-elevated);
  }

  .lang-selector__icon {
    transition: transform var(--transition-fast);
  }

  .lang-selector__btn[aria-expanded='true'] .lang-selector__icon {
    transform: rotate(180deg);
  }

  .lang-selector__dropdown {
    position: absolute;
    top: calc(100% + var(--space-1));
    right: 0;
    min-width: 140px;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all var(--transition-fast);
    z-index: var(--z-dropdown);
    overflow: hidden;
  }

  .lang-selector__dropdown[aria-hidden='false'] {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .lang-selector__option {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    width: 100%;
    padding: var(--space-2) var(--space-3);
    background: transparent;
    color: var(--color-text);
    font-size: var(--font-size-sm);
    text-align: left;
    transition: background-color var(--transition-fast);
    cursor: pointer;
  }

  .lang-selector__option:hover {
    background-color: var(--color-neutral-100);
  }

  :global([data-theme='dark']) .lang-selector__option:hover {
    background-color: var(--color-surface-elevated);
  }

  .lang-selector__option.active {
    background-color: var(--color-primary);
    color: var(--color-text-inverted);
  }

  .lang-selector__option.active:hover {
    background-color: var(--color-primary-dark);
  }

  .lang-selector__flag {
    font-size: 1.1em;
    line-height: 1;
  }

  .lang-selector__option-flag {
    font-size: 1.2em;
    line-height: 1;
  }

  .lang-selector__code {
    font-weight: var(--font-weight-semibold);
    min-width: 24px;
  }

  .lang-selector__name {
    color: inherit;
    opacity: 0.8;
  }

  .lang-selector__option.active .lang-selector__name {
    opacity: 1;
  }
</style>

<script>
  const selector = document.querySelector('.lang-selector');
  const btn = selector?.querySelector('.lang-selector__btn');
  const dropdown = selector?.querySelector('.lang-selector__dropdown');

  if (btn && dropdown) {
    // Toggle dropdown
    btn.addEventListener('click', () => {
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!isExpanded));
      dropdown.setAttribute('aria-hidden', String(isExpanded));
    });

    // Close on outside click
    document.addEventListener('click', (e) => {
      if (!selector?.contains(e.target as Node)) {
        btn.setAttribute('aria-expanded', 'false');
        dropdown.setAttribute('aria-hidden', 'true');
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        btn.setAttribute('aria-expanded', 'false');
        dropdown.setAttribute('aria-hidden', 'true');
      }
    });
  }
</script>
