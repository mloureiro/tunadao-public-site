---
import ThemeToggle from './ThemeToggle.astro';
import LanguageSelector from './LanguageSelector.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { navItems as navItemsConfig } from '@data/navigation';

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const navItems = navItemsConfig
  .filter((item) => !item.hidden)
  .map((item) => ({
    label: t(item.labelKey),
    href: getLocalizedPath(item.href, lang),
  }));

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header__container container">
    <a href={getLocalizedPath('/', lang)} class="header__logo">
      <img
        src={`${import.meta.env.BASE_URL}images/logo/tunadao-logo.svg`}
        alt="Tunadão 1998"
        class="header__logo-img"
        width="48"
        height="48"
      />
      <div class="header__logo-text">
        <span class="header__logo-name">Tunadão 1998</span>
        <span class="header__logo-subtitle">{t('home.subtitle')}</span>
      </div>
    </a>

    <nav class="header__nav" aria-label="Navegação principal">
      <ul class="header__nav-list">
        {
          navItems.map((item) => (
            <li class="header__nav-item">
              <a
                href={item.href}
                class:list={['header__nav-link', { active: currentPath === item.href }]}
                aria-current={currentPath === item.href ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div class="header__actions">
      <LanguageSelector lang={lang} currentPath={Astro.url.pathname} />
      <ThemeToggle />
      <button class="header__menu-btn" aria-label="Abrir menu" aria-expanded="false">
        <span class="header__menu-icon"></span>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="header__mobile-menu" aria-hidden="true">
    <nav aria-label="Menu mobile">
      <ul class="header__mobile-list">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class:list={['header__mobile-link', { active: currentPath === item.href }]}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    background-color: rgba(248, 249, 250, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-light);
    transition: background-color var(--transition-base);
  }

  :global([data-theme='dark']) .header {
    background-color: rgba(13, 17, 23, 0.8);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    text-decoration: none;
  }

  .header__logo-img {
    height: 40px;
    width: 40px;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .header__logo-img {
      height: 48px;
      width: 48px;
    }
  }

  .header__logo-text {
    display: none;
  }

  @media (min-width: 640px) {
    .header__logo-text {
      display: flex;
      flex-direction: column;
    }
  }

  .header__logo-name {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    line-height: var(--line-height-tight);
  }

  :global([data-theme='dark']) .header__logo-name {
    color: var(--color-accent-gold);
  }

  .header__logo-subtitle {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    line-height: var(--line-height-tight);
  }

  /* Desktop Navigation */
  .header__nav {
    display: none;
  }

  @media (min-width: 1024px) {
    .header__nav {
      display: block;
    }
  }

  .header__nav-list {
    display: flex;
    gap: var(--space-1);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .header__nav-link {
    display: block;
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition:
      color var(--transition-fast),
      background-color var(--transition-fast);
  }

  .header__nav-link:hover {
    color: var(--color-text);
    background-color: var(--color-surface-hover);
  }

  .header__nav-link.active {
    color: var(--color-primary);
    background-color: var(--color-surface-active);
  }

  /* Actions */
  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  /* Mobile menu button */
  .header__menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: transparent;
    transition: background-color var(--transition-fast);
  }

  .header__menu-btn:hover {
    background-color: var(--color-surface-hover);
  }

  @media (min-width: 1024px) {
    .header__menu-btn {
      display: none;
    }
  }

  .header__menu-icon {
    position: relative;
    width: 20px;
    height: 2px;
    background-color: var(--color-text);
    transition: background-color var(--transition-fast);
  }

  .header__menu-icon::before,
  .header__menu-icon::after {
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-text);
    transition: transform var(--transition-fast);
  }

  .header__menu-icon::before {
    top: -6px;
  }

  .header__menu-icon::after {
    bottom: -6px;
  }

  /* Menu open state */
  .header__menu-btn[aria-expanded='true'] .header__menu-icon {
    background-color: transparent;
  }

  .header__menu-btn[aria-expanded='true'] .header__menu-icon::before {
    transform: rotate(45deg) translate(4px, 4px);
  }

  .header__menu-btn[aria-expanded='true'] .header__menu-icon::after {
    transform: rotate(-45deg) translate(4px, -4px);
  }

  /* Mobile menu */
  .header__mobile-menu {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: rgba(248, 249, 250, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-light);
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition:
      transform var(--transition-base),
      opacity var(--transition-base),
      visibility var(--transition-base);
  }

  :global([data-theme='dark']) .header__mobile-menu {
    background-color: rgba(13, 17, 23, 0.95);
  }

  .header__mobile-menu[aria-hidden='false'] {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  @media (min-width: 1024px) {
    .header__mobile-menu {
      display: none;
    }
  }

  .header__mobile-list {
    list-style: none;
    padding: var(--space-4);
    margin: 0;
  }

  .header__mobile-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: background-color var(--transition-fast);
  }

  .header__mobile-link:hover {
    background-color: var(--color-surface-hover);
    color: var(--color-text);
  }

  .header__mobile-link.active {
    background-color: var(--color-surface-active);
    color: var(--color-primary);
  }
</style>

<script>
  const menuBtn = document.querySelector('.header__menu-btn');
  const mobileMenu = document.querySelector('.header__mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
      menuBtn.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenu.setAttribute('aria-hidden', String(isExpanded));
    });
  }
</script>
