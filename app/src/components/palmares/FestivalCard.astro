---
/**
 * FestivalCard - Displays a festival with poster, info, and awards
 * Used in the palmares page to show each festival entry.
 */

import { Icon } from '@ui/icons';
import Award from '@components/Award.astro';
import ResponsiveImage from '@components/ResponsiveImage.astro';
import type { FrontendPalmaresFestival } from '@lib/cms/types';
import { sortAwards, isTopPrize, extractPublicId } from '@lib/cms';

interface Props {
  festival: FrontendPalmaresFestival;
  organizerLabel?: string;
  participationLabel?: string;
}

const { festival, organizerLabel = 'Organização', participationLabel = 'Participação' } = Astro.props;

const sortedAwards = sortAwards(festival.awards);
const hasTopPrize = sortedAwards.length > 0 && isTopPrize(sortedAwards[0].slug);
const hasNoAwards = sortedAwards.length === 0;
const festivalInitial = festival.name.charAt(0).toUpperCase();
const posterPublicId = festival.posterUrl ? extractPublicId(festival.posterUrl) : null;
---

<article class:list={['festival-card', { 'festival-card--featured': hasTopPrize }]}>
  {/* Poster Section */}
  <div class="festival-card__poster">
    {festival.posterUrl ? (
      <button
        type="button"
        class="festival-card__poster-button"
        data-poster-url={festival.posterUrl}
        data-poster-alt={`Cartaz ${festival.name}`}
      >
        {posterPublicId ? (
          <ResponsiveImage
            publicId={posterPublicId}
            alt={`Cartaz ${festival.name}`}
            class="festival-card__poster-image"
            sizes="(max-width: 768px) 50vw, 300px"
            aspectRatio="3/4"
          />
        ) : (
          <img
            src={festival.posterUrl}
            alt={`Cartaz ${festival.name}`}
            class="festival-card__poster-image"
            loading="lazy"
          />
        )}
        <span class="festival-card__poster-zoom">
          <Icon name="zoom-in" size={20} />
        </span>
      </button>
    ) : (
      <div class="festival-card__poster-placeholder">
        <div class="festival-card__poster-pattern">
          <span class="festival-card__poster-initial">{festivalInitial}</span>
        </div>
        <div class="festival-card__poster-notes">
          <span>♪</span>
          <span>♫</span>
          <span>♪</span>
        </div>
      </div>
    )}
  </div>

  {/* Content Section */}
  <div class="festival-card__content">
    <header class="festival-card__header">
      <h3 class="festival-card__name">{festival.name}</h3>
      {festival.location && (
        <p class="festival-card__location">
          <Icon name="map-pin" size={14} />
          <span>{festival.location}</span>
        </p>
      )}
    </header>

    {/* Organizer */}
    {festival.organizingTuna && (
      <div class="festival-card__organizer">
        <div class="festival-card__organizer-avatar">
          {festival.organizingTuna.logoUrl ? (
            <img
              src={festival.organizingTuna.logoUrl}
              alt={festival.organizingTuna.shortName}
              loading="lazy"
            />
          ) : (
            <span class="festival-card__organizer-initial">
              {festival.organizingTuna.shortName.charAt(0)}
            </span>
          )}
        </div>
        <div class="festival-card__organizer-info">
          <span class="festival-card__organizer-label">{organizerLabel}</span>
          {festival.organizingTuna.website ? (
            <a
              href={festival.organizingTuna.website}
              target="_blank"
              rel="noopener noreferrer"
              class="festival-card__organizer-name"
              title={festival.organizingTuna.fullName}
            >
              {festival.organizingTuna.shortName}
            </a>
          ) : (
            <span class="festival-card__organizer-name" title={festival.organizingTuna.fullName}>
              {festival.organizingTuna.shortName}
            </span>
          )}
        </div>
      </div>
    )}

    {/* Awards */}
    <footer class="festival-card__awards">
      {hasNoAwards ? (
        <Award awardKey="premio-participacao" size="sm">{participationLabel}</Award>
      ) : (
        sortedAwards.map((award) => (
          <Award awardKey={award.slug} size="sm">{award.name}</Award>
        ))
      )}
    </footer>
  </div>
</article>

<style>
  /* Festival Card */
  .festival-card {
    background-color: var(--color-surface);
    border-radius: var(--radius-xl);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base),
      border-color var(--transition-base);
  }

  .festival-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-border);
  }

  .festival-card--featured {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-sm), 0 0 0 1px color-mix(in srgb, var(--color-gold) 30%, transparent);
  }

  .festival-card--featured:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--color-gold);
  }

  /* Poster Section */
  .festival-card__poster {
    position: relative;
    aspect-ratio: 3 / 4;
    background-color: var(--color-background-alt);
    overflow: hidden;
  }

  .festival-card__poster-button {
    display: block;
    width: 100%;
    height: 100%;
    border: none;
    padding: 0;
    background: none;
    cursor: zoom-in;
    position: relative;
  }

  .festival-card__poster-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .festival-card:hover .festival-card__poster-image {
    transform: scale(1.05);
  }

  .festival-card__poster-zoom {
    position: absolute;
    bottom: var(--space-3);
    right: var(--space-3);
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    border-radius: var(--radius-full);
    opacity: 0;
    transform: scale(0.8);
    transition: opacity var(--transition-base), transform var(--transition-base);
  }

  .festival-card__poster-button:hover .festival-card__poster-zoom,
  .festival-card__poster-button:focus .festival-card__poster-zoom {
    opacity: 1;
    transform: scale(1);
  }

  /* Placeholder - Modern design with initial and music notes */
  .festival-card__poster-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-dark) 100%
    );
    overflow: hidden;
  }

  .festival-card__poster-pattern {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-xl);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .festival-card__poster-initial {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .festival-card__poster-notes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .festival-card__poster-notes span {
    position: absolute;
    color: rgba(255, 255, 255, 0.1);
    font-size: 2rem;
  }

  .festival-card__poster-notes span:nth-child(1) {
    top: 15%;
    left: 10%;
    font-size: 1.5rem;
    transform: rotate(-15deg);
  }

  .festival-card__poster-notes span:nth-child(2) {
    top: 60%;
    right: 15%;
    font-size: 2.5rem;
    transform: rotate(10deg);
  }

  .festival-card__poster-notes span:nth-child(3) {
    bottom: 20%;
    left: 20%;
    font-size: 1.8rem;
    transform: rotate(-5deg);
  }

  /* Content Section */
  .festival-card__content {
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    flex: 1;
  }

  .festival-card__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .festival-card__name {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-text);
    line-height: var(--line-height-tight);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .festival-card__location {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .festival-card__location svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  /* Organizer Section */
  .festival-card__organizer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    margin-top: auto;
  }

  .festival-card__organizer-avatar {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    overflow: hidden;
    flex-shrink: 0;
    background-color: var(--color-surface);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border-light);
  }

  .festival-card__organizer-avatar img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 4px;
  }

  .festival-card__organizer-initial {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--color-text-inverted);
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .festival-card__organizer-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .festival-card__organizer-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .festival-card__organizer-name {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  a.festival-card__organizer-name:hover {
    color: var(--color-primary);
  }

  /* Awards Section */
  .festival-card__awards {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border-light);
  }

  .festival-card__awards:empty {
    display: none;
  }
</style>
