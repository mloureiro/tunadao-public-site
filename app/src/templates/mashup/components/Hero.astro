---
/**
 * Mashup Template Hero
 *
 * Heritage-inspired hero section combining:
 * - Advanced's centered, spacious layout
 * - Experimental's atmospheric background and subtle animation
 * - New: bold serif headings, gold accent rule, vinyl-inspired decorative ring
 *
 * Feels like looking at a vintage Blue Note album cover
 */
interface Props {
  title: string;
  subtitle?: string;
  icon?: string;
}

const { title, subtitle, icon } = Astro.props;
---

<section class="mash-hero">
  <!-- Background layers -->
  <div class="mash-hero__bg" aria-hidden="true">
    <div class="mash-hero__gradient"></div>
    <div class="mash-hero__vignette"></div>
  </div>

  <!-- Content -->
  <div class="mash-hero__content">
    {icon && <span class="mash-hero__icon" aria-hidden="true">{icon}</span>}

    <!-- Decorative label -->
    <span class="mash-hero__label">Est. 1998</span>

    <h1 class="mash-hero__title">{title}</h1>

    <!-- Gold accent rule -->
    <div class="mash-hero__rule" aria-hidden="true">
      <span class="mash-hero__rule-line"></span>
      <span class="mash-hero__rule-diamond"></span>
      <span class="mash-hero__rule-line"></span>
    </div>

    {subtitle && <p class="mash-hero__subtitle">{subtitle}</p>}
  </div>

  <!-- Scroll indicator -->
  <div class="mash-hero__scroll" aria-hidden="true">
    <span class="mash-hero__scroll-text">scroll</span>
    <span class="mash-hero__scroll-line"></span>
  </div>
</section>

<style>
  .mash-hero {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    padding: var(--mash-space-xl) var(--mash-space-md);
    text-align: center;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .mash-hero {
      min-height: 90vh;
    }
  }

  /* Background layers */
  .mash-hero__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .mash-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        ellipse at 50% 30%,
        rgba(212, 168, 83, 0.06) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 50% 100%,
        rgba(26, 26, 46, 0.8) 0%,
        transparent 60%
      );
  }

  .mash-hero__vignette {
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      transparent 50%,
      rgba(13, 17, 23, 0.4) 100%
    );
  }

  /* Content */
  .mash-hero__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .mash-hero__icon {
    display: block;
    font-size: 2.5rem;
    margin-bottom: var(--mash-space-md);
    opacity: 0.6;
    filter: grayscale(0.3);
  }

  @media (min-width: 768px) {
    .mash-hero__icon {
      font-size: 3rem;
    }
  }

  /* Monospace label above title */
  .mash-hero__label {
    display: inline-block;
    font-family: var(--mash-font-mono);
    font-size: 0.6875rem;
    letter-spacing: var(--mash-letter-spacing-wide);
    text-transform: uppercase;
    color: var(--mash-accent);
    margin-bottom: var(--mash-space-md);
    opacity: 0.8;
  }

  /* Title - bold serif, heritage feel */
  .mash-hero__title {
    font-family: var(--mash-font-display);
    font-size: clamp(3rem, 10vw, 6.5rem);
    font-weight: 900;
    letter-spacing: -0.02em;
    line-height: 0.95;
    color: var(--mash-text);
    margin: 0;
  }

  /* Gold accent rule with diamond */
  .mash-hero__rule {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin: var(--mash-space-md) auto;
    max-width: 200px;
  }

  .mash-hero__rule-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--mash-accent));
  }

  .mash-hero__rule-line:last-child {
    background: linear-gradient(90deg, var(--mash-accent), transparent);
  }

  .mash-hero__rule-diamond {
    width: 6px;
    height: 6px;
    background-color: var(--mash-accent);
    transform: rotate(45deg);
    flex-shrink: 0;
  }

  /* Subtitle */
  .mash-hero__subtitle {
    margin: 0;
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    font-weight: 400;
    color: var(--mash-text-secondary);
    line-height: 1.6;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Scroll indicator */
  .mash-hero__scroll {
    position: absolute;
    bottom: var(--mash-space-md);
    left: 50%;
    transform: translateX(-50%);
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: mash-scroll-hint 2.5s ease-in-out infinite;
  }

  @media (min-width: 768px) {
    .mash-hero__scroll {
      display: flex;
    }
  }

  .mash-hero__scroll-text {
    font-family: var(--mash-font-mono);
    font-size: 0.625rem;
    letter-spacing: var(--mash-letter-spacing-wide);
    text-transform: uppercase;
    color: var(--mash-text-muted);
  }

  .mash-hero__scroll-line {
    display: block;
    width: 1px;
    height: 48px;
    background: linear-gradient(to bottom, var(--mash-accent-muted), transparent);
  }

  @keyframes mash-scroll-hint {
    0%, 100% {
      opacity: 0.5;
      transform: translateX(-50%) translateY(0);
    }
    50% {
      opacity: 0.25;
      transform: translateX(-50%) translateY(4px);
    }
  }
</style>
