---
/**
 * Mashup Template Footer
 *
 * Heritage-inspired footer combining:
 * - Advanced's comprehensive link structure
 * - Experimental's minimal aesthetic
 * - New: gold horizontal rule, serif branding, monospace year
 */
import SocialLinks from '@components/SocialLinks.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getContactInfo } from '@lib/cms';
import { footerSections } from '@data/navigation';

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
const foundingYear = 1998;

const contactInfo = await getContactInfo();

const footerLinks = footerSections
  .map((section) => ({
    title: t(section.titleKey),
    links: section.items
      .filter((item) => !item.hidden)
      .map((item) => ({
        label: t(item.labelKey),
        href: getLocalizedPath(item.href, lang),
      })),
  }))
  .filter((section) => section.links.length > 0);
---

<footer class="mash-footer">
  <!-- Heritage divider -->
  <div class="mash-footer__divider" aria-hidden="true">
    <span class="mash-footer__divider-line"></span>
    <span class="mash-footer__divider-diamond"></span>
    <span class="mash-footer__divider-line"></span>
  </div>

  <div class="mash-container">
    <!-- Top section -->
    <div class="mash-footer__top">
      <div class="mash-footer__brand">
        <a href={getLocalizedPath('/', lang)} class="mash-footer__logo">
          <span class="mash-footer__logo-text">Tunad√£o</span>
          <span class="mash-footer__logo-year">1998</span>
        </a>
        <p class="mash-footer__tagline">{t('home.subtitle')}</p>
        <div class="mash-footer__social">
          <SocialLinks />
        </div>
      </div>

      <div class="mash-footer__links">
        {
          footerLinks.map((section) => (
            <div class="mash-footer__section">
              <h3 class="mash-footer__title">{section.title}</h3>
              <ul class="mash-footer__list">
                {section.links.map((link) => (
                  <li>
                    <a href={link.href} class="mash-footer__link">
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }

        <div class="mash-footer__section">
          <h3 class="mash-footer__title">{t('footer.contact')}</h3>
          <address class="mash-footer__address">
            {
              contactInfo.email && (
                <a href={`mailto:${contactInfo.email}`} class="mash-footer__link">
                  {contactInfo.email}
                </a>
              )
            }
          </address>
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="mash-footer__bottom">
      <p class="mash-footer__years">
        <span class="mash-footer__years-label">{foundingYear}</span>
        <span class="mash-footer__years-dash">&mdash;</span>
        <span class="mash-footer__years-label">{currentYear}</span>
      </p>
      <p class="mash-footer__copyright">&copy; Tunadao 1998. {t('footer.copyright')}.</p>
    </div>
  </div>
</footer>

<style>
  .mash-footer {
    background-color: var(--mash-bg);
    padding: 0 0 var(--mash-space-md);
    margin-top: var(--mash-section-padding);
  }

  /* Heritage divider at top */
  .mash-footer__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0 var(--mash-space-md);
    margin-bottom: var(--mash-space-lg);
  }

  .mash-footer__divider-line {
    flex: 1;
    max-width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--mash-border));
  }

  .mash-footer__divider-line:last-child {
    background: linear-gradient(90deg, var(--mash-border), transparent);
  }

  .mash-footer__divider-diamond {
    width: 5px;
    height: 5px;
    background-color: var(--mash-accent-muted);
    transform: rotate(45deg);
    flex-shrink: 0;
  }

  /* Top section */
  .mash-footer__top {
    display: grid;
    gap: var(--mash-space-lg);
  }

  @media (min-width: 768px) {
    .mash-footer__top {
      grid-template-columns: 1.5fr 2fr;
      gap: var(--mash-space-xl);
    }
  }

  /* Brand */
  .mash-footer__brand {
    max-width: 300px;
  }

  .mash-footer__logo {
    display: inline-flex;
    align-items: baseline;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--mash-text);
  }

  .mash-footer__logo-text {
    font-family: var(--mash-font-display);
    font-size: 1.375rem;
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  .mash-footer__logo-year {
    font-family: var(--mash-font-mono);
    font-size: 0.6875rem;
    color: var(--mash-accent);
    letter-spacing: var(--mash-letter-spacing-wide);
  }

  .mash-footer__tagline {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: var(--mash-text-secondary);
    line-height: 1.6;
  }

  .mash-footer__social {
    margin-top: 1.5rem;
  }

  /* Links grid */
  .mash-footer__links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem 2rem;
  }

  @media (min-width: 640px) {
    .mash-footer__links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .mash-footer__section {
    min-width: 0;
  }

  .mash-footer__title {
    font-family: var(--mash-font-mono);
    font-size: 0.625rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: var(--mash-letter-spacing-wide);
    color: var(--mash-accent-muted);
    margin-bottom: 1rem;
  }

  .mash-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .mash-footer__list li {
    margin-bottom: 0.5rem;
  }

  .mash-footer__link {
    font-size: 0.875rem;
    color: var(--mash-text-secondary);
    text-decoration: none;
    transition: color var(--mash-transition-medium);
  }

  .mash-footer__link:hover {
    color: var(--mash-accent);
  }

  .mash-footer__address {
    font-style: normal;
  }

  /* Bottom */
  .mash-footer__bottom {
    margin-top: var(--mash-space-lg);
    padding-top: var(--mash-space-md);
    border-top: 1px solid var(--mash-border-subtle);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .mash-footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .mash-footer__years {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .mash-footer__years {
      justify-content: flex-start;
    }
  }

  .mash-footer__years-label {
    font-family: var(--mash-font-mono);
    font-size: 0.8125rem;
    letter-spacing: var(--mash-letter-spacing-wide);
    color: var(--mash-accent-muted);
  }

  .mash-footer__years-dash {
    color: var(--mash-border);
  }

  .mash-footer__copyright {
    font-size: 0.75rem;
    color: var(--mash-text-muted);
  }
</style>
