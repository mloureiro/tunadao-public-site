---
/**
 * Mashup Template - Section Component
 * Heritage section wrapper with Playfair Display title and gold diamond divider.
 */
interface Props {
  title?: string;
  class?: string;
}
const { title, class: className } = Astro.props;
---

<section class:list={['mash-section', className]}>
  {title && (
    <div class="mash-section__header">
      <h2 class="mash-section__title">{title}</h2>
      <div class="mash-section__divider" aria-hidden="true">
        <span class="mash-section__divider-line"></span>
        <span class="mash-section__divider-diamond"></span>
        <span class="mash-section__divider-line"></span>
      </div>
    </div>
  )}
  <div class="mash-section__content">
    <slot />
  </div>
</section>

<style>
  .mash-section {
    padding: var(--mash-section-padding, clamp(4rem, 10vh, 8rem)) 0;
  }

  .mash-section__header {
    text-align: center;
    margin-bottom: var(--mash-space-lg, 4rem);
  }

  .mash-section__title {
    font-family: var(--mash-font-display, 'Playfair Display', Georgia, serif);
    font-size: clamp(1.75rem, 4vw, 2.75rem);
    font-weight: 700;
    letter-spacing: -0.01em;
    line-height: 1.1;
    color: var(--mash-text, #f0ebe3);
    margin: 0;
  }

  /* Heritage divider with diamond */
  .mash-section__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    margin-top: var(--mash-space-sm, 1rem);
    max-width: 160px;
    margin-left: auto;
    margin-right: auto;
  }

  .mash-section__divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--mash-accent, #d4a853));
  }

  .mash-section__divider-line:last-child {
    background: linear-gradient(90deg, var(--mash-accent, #d4a853), transparent);
  }

  .mash-section__divider-diamond {
    width: 5px;
    height: 5px;
    background-color: var(--mash-accent, #d4a853);
    transform: rotate(45deg);
    flex-shrink: 0;
  }

  .mash-section__content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6, 1.5rem);
  }

  @media (min-width: 768px) {
    .mash-section__content {
      padding: 0 var(--space-8, 2rem);
    }
  }
</style>
