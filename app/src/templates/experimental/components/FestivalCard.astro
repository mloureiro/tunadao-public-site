---
/**
 * Experimental Template - FestivalCard
 * Bold, unconventional card design with overlapping elements
 * Features: typographic experimentation, creative hover states
 */
interface Props {
  title: string;
  year?: number | string;
  location?: string;
  image?: string;
  href?: string;
}

const { title, year, location, image, href } = Astro.props;
---

<article class="exp-card">
  {href ? (
    <a href={href} class="exp-card__link">
      <div class="exp-card__inner">
        {image && (
          <div class="exp-card__image-wrapper">
            <img src={image} alt="" class="exp-card__image" loading="lazy" />
            <div class="exp-card__image-overlay"></div>
          </div>
        )}

        <div class="exp-card__content">
          {year && (
            <span class="exp-card__year">{year}</span>
          )}

          <h3 class="exp-card__title">{title}</h3>

          {location && (
            <p class="exp-card__location">{location}</p>
          )}
        </div>

        <div class="exp-card__accent" aria-hidden="true"></div>
      </div>
    </a>
  ) : (
    <div class="exp-card__inner">
      {image && (
        <div class="exp-card__image-wrapper">
          <img src={image} alt="" class="exp-card__image" loading="lazy" />
          <div class="exp-card__image-overlay"></div>
        </div>
      )}

      <div class="exp-card__content">
        {year && (
          <span class="exp-card__year">{year}</span>
        )}

        <h3 class="exp-card__title">{title}</h3>

        {location && (
          <p class="exp-card__location">{location}</p>
        )}
      </div>

      <div class="exp-card__accent" aria-hidden="true"></div>
    </div>
  )}
</article>

<style>
  .exp-card {
    position: relative;
    width: 100%;
  }

  .exp-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .exp-card__inner {
    position: relative;
    background: var(--exp-bg-surface);
    border: 1px solid var(--exp-border);
    overflow: hidden;
    transition: all var(--exp-transition-medium);
  }

  .exp-card__link:hover .exp-card__inner,
  .exp-card__inner:hover {
    border-color: var(--exp-accent);
    transform: translateY(-4px);
  }

  /* Image */
  .exp-card__image-wrapper {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  .exp-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.3) contrast(1.1);
    transition: all var(--exp-transition-slow);
  }

  .exp-card__link:hover .exp-card__image {
    filter: grayscale(0) contrast(1);
    transform: scale(1.05);
  }

  .exp-card__image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 30%,
      var(--exp-bg-surface) 100%
    );
  }

  /* Content */
  .exp-card__content {
    position: relative;
    padding: var(--exp-space-md);
    padding-top: 0;
    margin-top: -2rem; /* Overlap with image */
    z-index: 1;
  }

  .exp-card__year {
    display: inline-block;
    font-family: var(--exp-font-display);
    font-size: 3rem;
    font-weight: 700;
    color: var(--exp-accent);
    opacity: 0.3;
    line-height: 1;
    margin-bottom: var(--exp-space-xs);
    transition: opacity var(--exp-transition-medium);
  }

  .exp-card__link:hover .exp-card__year {
    opacity: 0.6;
  }

  .exp-card__title {
    margin: 0;
    font-family: var(--exp-font-display);
    font-size: 1rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: var(--exp-letter-spacing-normal);
    color: var(--exp-text);
    transition: color var(--exp-transition-fast);
  }

  .exp-card__link:hover .exp-card__title {
    color: var(--exp-accent);
  }

  .exp-card__location {
    margin: var(--exp-space-xs) 0 0;
    font-size: 0.8rem;
    color: var(--exp-text-muted);
  }

  /* Accent line */
  .exp-card__accent {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--exp-accent);
    transition: width var(--exp-transition-medium);
  }

  .exp-card__link:hover .exp-card__accent,
  .exp-card__inner:hover .exp-card__accent {
    width: 100%;
  }
</style>
