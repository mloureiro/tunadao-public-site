---
/**
 * Experimental Template - Section
 * Full-viewport-width band. Content constrained to centered column (~960px).
 * Structural divider between sections (thick line with generous vertical spacing).
 */
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<section class:list={['exp-section', className]}>
  {title && (
    <header class="exp-section__header">
      <h2 class="exp-section__title">{title}</h2>
    </header>
  )}

  <div class="exp-section__content">
    <slot />
  </div>

  <div class="exp-section__divider" aria-hidden="true"></div>
</section>

<style>
  .exp-section {
    position: relative;
    width: 100%;
    padding: var(--exp-space-xl) 0;
  }

  .exp-section__header {
    max-width: 960px;
    margin: 0 auto var(--exp-space-lg);
    padding: 0 var(--exp-space-md);
  }

  .exp-section__title {
    margin: 0;
    font-family: var(--exp-font-display);
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--exp-text);
    line-height: 1.1;
  }

  .exp-section__content {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 var(--exp-space-md);
  }

  .exp-section__divider {
    max-width: 960px;
    margin: var(--exp-space-xl) auto 0;
    padding: 0 var(--exp-space-md);
    height: 3px;
    background: var(--exp-border);
  }

  /* Last section hides its divider */
  .exp-section:last-child .exp-section__divider {
    display: none;
  }

  @media (max-width: 767px) {
    .exp-section {
      padding: var(--exp-space-lg) 0;
    }

    .exp-section__divider {
      margin-top: var(--exp-space-lg);
      height: 2px;
    }
  }
</style>
