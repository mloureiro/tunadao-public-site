---
/**
 * Experimental Template - Award
 * Simple styled text element for award names.
 * NOT a pill or badge â€” just text with color coding.
 * Top prizes get accent color, others are muted.
 * Body font (Inter), normal case, inline display.
 */
import { isTopPrize } from '@lib/cms';

interface Props {
  awardKey: string;
  size?: 'sm' | 'md';
  class?: string;
}

const { awardKey, size = 'sm', class: className = '' } = Astro.props;
const isTop = isTopPrize(awardKey);
---

<span
  class:list={[
    'exp-award',
    `exp-award--${size}`,
    { 'exp-award--top': isTop },
    className,
  ]}
>
  <slot />
</span>

<style>
  .exp-award {
    display: inline;
    font-family: var(--exp-font-body);
    color: var(--exp-text-muted);
    line-height: 1.4;
  }

  .exp-award--sm {
    font-size: 0.8rem;
  }

  .exp-award--md {
    font-size: 0.95rem;
  }

  .exp-award--top {
    color: var(--exp-accent);
    font-weight: 600;
  }
</style>
