---
/**
 * Experimental Template - Award
 * Bold, unconventional award badges with glow effects and monospace typography
 * Inspirations: Ã“lafur Arnalds typography, neon/glow aesthetic
 */
export type AwardVariant = 'default' | 'gold' | 'special' | 'public';

interface Props {
  awardKey: string;
  size?: 'sm' | 'md';
  class?: string;
}

const { awardKey, size = 'sm', class: className = '' } = Astro.props;

const DEFAULT_ICON = '//';

const AWARD_ICONS: Record<string, string> = {
  'melhor-tuna': '01',
  'segunda-melhor-tuna': '02',
  'terceira-melhor-tuna': '03',
  'tuna-mais-tuna': '>>',
  'tuna-do-publico': '<3',
  'melhor-serenata': '~~',
  'melhor-passacalles': '>>',
  'melhor-pandeireta': '||',
  'melhor-instrumental': '##',
  'melhor-solista': '**',
  'melhor-original': '++',
  'melhor-estandarte': '[]',
  'premio-participacao': '--',
};

function getVariant(key: string): AwardVariant {
  if (key === 'melhor-tuna') return 'gold';
  if (key === 'tuna-mais-tuna') return 'special';
  if (key === 'tuna-do-publico') return 'public';
  return 'default';
}

const variant = getVariant(awardKey);
const icon = AWARD_ICONS[awardKey] || DEFAULT_ICON;
---

<span
  class:list={[
    'exp-award',
    `exp-award--${size}`,
    `exp-award--${variant}`,
    className,
  ]}
>
  <span class="exp-award__icon" aria-hidden="true">{icon}</span>
  <span class="exp-award__label"><slot /></span>
</span>

<style>
  .exp-award {
    display: inline-flex;
    align-items: center;
    gap: 0.5em;
    font-family: var(--exp-font-display);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid var(--exp-border);
    color: var(--exp-text);
    background: transparent;
    transition: all var(--exp-transition-fast);
  }

  .exp-award:hover {
    border-color: var(--exp-accent);
  }

  .exp-award__icon {
    font-family: var(--exp-font-display);
    font-weight: 700;
    line-height: 1;
    flex-shrink: 0;
    opacity: 0.6;
  }

  .exp-award__label {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Size: sm */
  .exp-award--sm {
    padding: 0.25em 0.5em;
    font-size: 0.7rem;
  }

  .exp-award--sm .exp-award__icon {
    font-size: 0.65rem;
  }

  /* Size: md */
  .exp-award--md {
    padding: 0.4em 0.75em;
    font-size: 0.85rem;
  }

  .exp-award--md .exp-award__icon {
    font-size: 0.8rem;
  }

  /* Variant: gold */
  .exp-award--gold {
    border-color: #d4a017;
    color: #ffd700;
    box-shadow: 0 0 12px rgba(255, 215, 0, 0.2);
  }

  .exp-award--gold .exp-award__icon {
    color: #ffd700;
    opacity: 1;
  }

  .exp-award--gold:hover {
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
    border-color: #ffd700;
  }

  /* Variant: special (tuna mais tuna) */
  .exp-award--special {
    border-color: var(--exp-accent);
    color: var(--exp-accent);
    box-shadow: 0 0 12px var(--exp-accent-glow);
  }

  .exp-award--special .exp-award__icon {
    color: var(--exp-accent);
    opacity: 1;
  }

  .exp-award--special:hover {
    box-shadow: var(--exp-accent-glow);
  }

  /* Variant: public (tuna do publico) */
  .exp-award--public {
    border-color: #ff6b9d;
    color: #ff6b9d;
    box-shadow: 0 0 12px rgba(255, 107, 157, 0.2);
  }

  .exp-award--public .exp-award__icon {
    color: #ff6b9d;
    opacity: 1;
  }

  .exp-award--public:hover {
    box-shadow: 0 0 20px rgba(255, 107, 157, 0.4);
    border-color: #ff6b9d;
  }

  /* Variant: default */
  .exp-award--default {
    color: var(--exp-text-muted);
    border-color: var(--exp-border);
  }

  .exp-award--default .exp-award__icon {
    opacity: 0.4;
  }
</style>
