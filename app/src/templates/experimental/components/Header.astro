---
/**
 * Experimental Template - Header
 * Creative navigation with unconventional typography (Ólafur Arnalds inspired)
 * Features: broken text, minimalist, creative hover states
 */
import type { Language } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const base = import.meta.env.BASE_URL;

const navigation = [
  { href: `${base}`, labelPt: 'In_í_cio', labelEn: 'Ho_m_e' },
  { href: `${base}palmares`, labelPt: 'Pa_l_ma_r_és', labelEn: 'Aw_a_rds' },
  { href: `${base}citadao`, labelPt: 'Ci_t_adão', labelEn: 'Ci_t_adão' },
];
---

<header class="exp-header">
  <div class="exp-header__inner">
    <!-- Logo with broken text -->
    <a href={base} class="exp-header__logo" aria-label="Tunadão 1998">
      <span class="exp-broken-text">T<span>_</span>u<span>_</span>n<span>_</span>a<span>_</span>d<span>_</span>ã<span>_</span>o</span>
    </a>

    <!-- Navigation -->
    <nav class="exp-header__nav" aria-label="Navegação principal">
      <ul class="exp-header__list">
        {navigation.map(({ href, labelPt, labelEn }) => (
          <li class="exp-header__item">
            <a href={href} class="exp-header__link">
              <span class="exp-broken-text" set:html={lang === 'en' ? labelEn : labelPt} />
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Vertical accent element -->
    <div class="exp-header__accent" aria-hidden="true">
      <span class="exp-vertical-text">1998</span>
    </div>
  </div>
</header>

<style>
  .exp-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--exp-space-md);
    background: linear-gradient(to bottom, var(--exp-bg) 0%, transparent 100%);
    pointer-events: none;
  }

  .exp-header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1600px;
    margin: 0 auto;
    pointer-events: auto;
  }

  .exp-header__logo {
    font-size: 1.25rem;
    color: var(--exp-text);
    text-decoration: none;
    transition: color var(--exp-transition-medium);
  }

  .exp-header__logo:hover {
    color: var(--exp-accent);
  }

  .exp-header__logo .exp-broken-text span {
    color: var(--exp-accent);
    opacity: 1;
    transition: opacity var(--exp-transition-medium);
  }

  .exp-header__logo:hover .exp-broken-text span {
    opacity: 0.3;
  }

  .exp-header__nav {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .exp-header__list {
    display: flex;
    gap: var(--exp-space-lg);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .exp-header__link {
    display: block;
    font-size: 0.8rem;
    color: var(--exp-text-muted);
    text-decoration: none;
    transition: color var(--exp-transition-medium);
  }

  .exp-header__link:hover {
    color: var(--exp-text);
  }

  .exp-header__link .exp-broken-text span {
    color: var(--exp-text-muted);
    transition: color var(--exp-transition-medium);
  }

  .exp-header__link:hover .exp-broken-text span {
    color: var(--exp-accent);
  }

  .exp-header__accent {
    position: fixed;
    right: var(--exp-space-md);
    top: 50%;
    transform: translateY(-50%);
    color: var(--exp-text-muted);
    opacity: 0.3;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .exp-header__nav {
      position: static;
      transform: none;
    }

    .exp-header__list {
      gap: var(--exp-space-md);
    }

    .exp-header__accent {
      display: none;
    }
  }
</style>
