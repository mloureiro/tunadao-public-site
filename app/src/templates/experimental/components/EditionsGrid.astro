---
/**
 * Experimental Template - EditionsGrid
 * Non-standard staggered grid layout for edition cards
 * Features: masonry-style, creative reveal animations
 *
 * NOTE: This is a template-specific extra, not part of TemplateExports.
 * Currently unused by dev pages (citadao page uses EditionCard directly).
 */
interface Edition {
  year: number;
  name?: string;
  location?: string;
  poster?: string;
  href?: string;
}

interface Props {
  editions: Edition[];
}

const { editions } = Astro.props;
---

<div class="exp-editions-grid">
  {editions.map((edition, index) => (
    <div
      class="exp-editions-grid__item"
      style={`--stagger-index: ${index % 5}`}
    >
      <article class="exp-editions-grid__card">
        {edition.poster && (
          <div class="exp-editions-grid__image">
            <img src={edition.poster} alt="" loading="lazy" />
          </div>
        )}
        <div class="exp-editions-grid__content">
          {edition.year && (
            <span class="exp-editions-grid__year">{edition.year}</span>
          )}
          <h3 class="exp-editions-grid__title">
            {edition.name || `Edicao ${edition.year}`}
          </h3>
          {edition.location && (
            <span class="exp-editions-grid__location">{edition.location}</span>
          )}
        </div>
      </article>
    </div>
  ))}
</div>

<style>
  .exp-editions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--exp-space-md);
    position: relative;
  }

  .exp-editions-grid__item {
    transform: translateY(calc(var(--stagger-index) * 20px));
    opacity: 0;
    animation: exp-grid-reveal 0.6s ease-out forwards;
    animation-delay: calc(var(--stagger-index) * 0.1s);
  }

  @keyframes exp-grid-reveal {
    from {
      opacity: 0;
      transform: translateY(calc(var(--stagger-index) * 20px + 30px));
    }
    to {
      opacity: 1;
      transform: translateY(calc(var(--stagger-index) * 20px));
    }
  }

  .exp-editions-grid__card {
    background: var(--exp-bg-surface);
    border: 1px solid var(--exp-border);
    overflow: hidden;
    transition: all var(--exp-transition-medium);
  }

  .exp-editions-grid__card:hover {
    border-color: var(--exp-accent);
    transform: translateY(-4px);
  }

  .exp-editions-grid__image {
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  .exp-editions-grid__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(0.3) contrast(1.1);
    transition: all var(--exp-transition-slow);
  }

  .exp-editions-grid__card:hover .exp-editions-grid__image img {
    filter: grayscale(0) contrast(1);
    transform: scale(1.05);
  }

  .exp-editions-grid__content {
    padding: var(--exp-space-md);
  }

  .exp-editions-grid__year {
    display: inline-block;
    font-family: var(--exp-font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--exp-accent);
    opacity: 0.3;
    line-height: 1;
  }

  .exp-editions-grid__title {
    margin: var(--exp-space-xs) 0 0;
    font-family: var(--exp-font-display);
    font-size: 0.85rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--exp-text);
  }

  .exp-editions-grid__location {
    display: block;
    margin-top: var(--exp-space-xs);
    font-size: 0.75rem;
    color: var(--exp-text-muted);
  }

  @media (max-width: 768px) {
    .exp-editions-grid__item {
      transform: none;
      animation: exp-grid-reveal-mobile 0.4s ease-out forwards;
    }

    @keyframes exp-grid-reveal-mobile {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  @media (min-width: 1200px) {
    .exp-editions-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (min-width: 1600px) {
    .exp-editions-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }
</style>
