---
/**
 * Experimental Template - YearNav
 * Unconventional year navigation: horizontal monospace strip on desktop,
 * floating red pill on mobile. Scroll-based active year tracking.
 * Inspirations: Moog horizontal scrolling, Ã“lafur Arnalds typography
 */
interface Props {
  years: number[];
  idPrefix?: string;
  ariaLabel?: string;
}

const { years, idPrefix = 'year', ariaLabel = 'Jump to year' } = Astro.props;
const sortedYears = [...years].sort((a, b) => b - a);
---

{/* Desktop: horizontal scroll strip fixed at top */}
<nav class="exp-yearnav" aria-label={ariaLabel} data-id-prefix={idPrefix}>
  <div class="exp-yearnav__track">
    <div class="exp-yearnav__scroll">
      {sortedYears.map((year) => (
        <a
          href={`#${idPrefix}-${year}`}
          class="exp-yearnav__link"
          data-year={year}
          aria-label={`Jump to ${year}`}
        >
          <span class="exp-yearnav__text">{year}</span>
        </a>
      ))}
    </div>
    <div class="exp-yearnav__fade-left" aria-hidden="true"></div>
    <div class="exp-yearnav__fade-right" aria-hidden="true"></div>
  </div>
</nav>

{/* Mobile: floating year pill */}
<div class="exp-yearnav-mobile" aria-hidden="true">
  <button class="exp-yearnav-mobile__btn" type="button" aria-label="Current year navigation">
    <span class="exp-yearnav-mobile__year"></span>
  </button>
  <div class="exp-yearnav-mobile__dropdown">
    <div class="exp-yearnav-mobile__list">
      {sortedYears.map((year) => (
        <a href={`#${idPrefix}-${year}`} class="exp-yearnav-mobile__link" data-year={year}>
          {year}
        </a>
      ))}
    </div>
  </div>
</div>

<script>
  (function () {
    function initExpYearNav() {
      const nav = document.querySelector('.exp-yearnav');
      const mobile = document.querySelector('.exp-yearnav-mobile');
      const mobileYear = mobile?.querySelector('.exp-yearnav-mobile__year');
      const mobileBtn = mobile?.querySelector('.exp-yearnav-mobile__btn');
      const mobileDropdown = mobile?.querySelector('.exp-yearnav-mobile__dropdown');

      if (!nav) return;

      const idPrefix = nav.getAttribute('data-id-prefix') || 'year';
      const links = nav.querySelectorAll('.exp-yearnav__link');
      const mobileLinks = mobile?.querySelectorAll('.exp-yearnav-mobile__link');
      const sections: Element[] = [];

      links.forEach((link) => {
        const href = link.getAttribute('href');
        if (href) {
          const section = document.querySelector(href);
          if (section) sections.push(section);
        }
      });

      if (sections.length === 0) return;

      let currentYear: string | null = null;

      function updateActiveYear(year: string) {
        if (year === currentYear) return;
        currentYear = year;

        links.forEach((link) => {
          const linkYear = link.getAttribute('data-year');
          const isActive = linkYear === year;
          link.classList.toggle('exp-yearnav__link--active', isActive);
          link.setAttribute('aria-current', isActive ? 'true' : 'false');

          // Scroll active link into view
          if (isActive) {
            link.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
          }
        });

        if (mobileYear) {
          mobileYear.textContent = year;
        }

        mobileLinks?.forEach((link) => {
          const linkYear = link.getAttribute('data-year');
          link.classList.toggle('exp-yearnav-mobile__link--active', linkYear === year);
        });
      }

      // Intersection Observer for tracking
      const observer = new IntersectionObserver(
        (entries) => {
          const visible = entries.filter((e) => e.isIntersecting);
          if (visible.length > 0) {
            visible.sort((a, b) => a.boundingClientRect.top - b.boundingClientRect.top);
            const year = visible[0].target.id.replace(new RegExp(`^${idPrefix}-`), '');
            updateActiveYear(year);
          }
        },
        { rootMargin: '-20% 0px -60% 0px', threshold: 0 }
      );

      sections.forEach((s) => observer.observe(s));

      // Show/hide nav based on scroll position
      const showObserver = new IntersectionObserver(
        (entries) => {
          const visible = entries[0].isIntersecting;
          nav.classList.toggle('exp-yearnav--active', !visible);
          mobile?.classList.toggle('exp-yearnav-mobile--visible', !visible);
        },
        { threshold: 0.5 }
      );

      if (sections[0]) {
        showObserver.observe(sections[0]);
      }

      // Smooth scroll on click
      function handleClick(e: Event) {
        e.preventDefault();
        const link = e.currentTarget as HTMLElement;
        const href = link.getAttribute('href');
        if (!href) return;

        mobileDropdown?.classList.remove('exp-yearnav-mobile__dropdown--open');

        const target = document.querySelector(href);
        if (!target) return;

        const offset = 100;
        const pos = target.getBoundingClientRect().top + window.pageYOffset - offset;
        window.scrollTo({ top: pos, behavior: 'smooth' });
      }

      links.forEach((link) => link.addEventListener('click', handleClick));
      mobileLinks?.forEach((link) => link.addEventListener('click', handleClick));

      // Mobile dropdown toggle
      mobileBtn?.addEventListener('click', () => {
        mobileDropdown?.classList.toggle('exp-yearnav-mobile__dropdown--open');
      });

      document.addEventListener('click', (e) => {
        if (!mobile?.contains(e.target as Node)) {
          mobileDropdown?.classList.remove('exp-yearnav-mobile__dropdown--open');
        }
      });

      // Keyboard navigation
      nav.addEventListener('keydown', (event) => {
        const e = event as KeyboardEvent;
        const allLinks = Array.from(links);
        const idx = allLinks.findIndex((l) => l === document.activeElement);
        if (idx === -1) return;

        let next = idx;
        switch (e.key) {
          case 'ArrowRight':
          case 'ArrowDown':
            e.preventDefault();
            next = Math.min(idx + 1, allLinks.length - 1);
            break;
          case 'ArrowLeft':
          case 'ArrowUp':
            e.preventDefault();
            next = Math.max(idx - 1, 0);
            break;
          case 'Home':
            e.preventDefault();
            next = 0;
            break;
          case 'End':
            e.preventDefault();
            next = allLinks.length - 1;
            break;
        }

        if (next !== idx) {
          (allLinks[next] as HTMLElement).focus();
        }
      });

      // Initial state
      if (sections[0]) {
        const firstYear = sections[0].id.replace(new RegExp(`^${idPrefix}-`), '');
        updateActiveYear(firstYear);
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initExpYearNav);
    } else {
      initExpYearNav();
    }
  })();
</script>

<style>
  /* Desktop: horizontal strip */
  .exp-yearnav {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 40;
    background: var(--exp-bg);
    border-bottom: 1px solid var(--exp-border);
    opacity: 0;
    transform: translateY(-100%);
    transition: all var(--exp-transition-medium);
    pointer-events: none;
  }

  .exp-yearnav--active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  @media (min-width: 768px) {
    .exp-yearnav {
      display: block;
    }
  }

  /* Account for dev banner when present */
  .page-content .exp-yearnav--active {
    top: 48px;
  }

  .exp-yearnav__track {
    position: relative;
    overflow: hidden;
  }

  .exp-yearnav__scroll {
    display: flex;
    overflow-x: auto;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding: 0 var(--exp-space-md);
    gap: 0;
  }

  .exp-yearnav__scroll::-webkit-scrollbar {
    display: none;
  }

  .exp-yearnav__link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1rem;
    font-family: var(--exp-font-display);
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--exp-text-muted);
    text-decoration: none;
    white-space: nowrap;
    transition: all var(--exp-transition-fast);
    border-bottom: 2px solid transparent;
    flex-shrink: 0;
  }

  .exp-yearnav__link:hover {
    color: var(--exp-text);
  }

  .exp-yearnav__link--active {
    color: var(--exp-accent);
    border-bottom-color: var(--exp-accent);
    font-weight: 700;
    text-shadow: 0 0 10px var(--exp-accent-glow);
  }

  .exp-yearnav__link:focus-visible {
    outline: 2px solid var(--exp-accent);
    outline-offset: -2px;
  }

  /* Fade edges */
  .exp-yearnav__fade-left,
  .exp-yearnav__fade-right {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 40px;
    pointer-events: none;
    z-index: 1;
  }

  .exp-yearnav__fade-left {
    left: 0;
    background: linear-gradient(to right, var(--exp-bg), transparent);
  }

  .exp-yearnav__fade-right {
    right: 0;
    background: linear-gradient(to left, var(--exp-bg), transparent);
  }

  /* Mobile: floating pill */
  .exp-yearnav-mobile {
    position: fixed;
    bottom: var(--exp-space-lg);
    right: var(--exp-space-md);
    z-index: 50;
    opacity: 0;
    transform: translateY(10px);
    transition: all var(--exp-transition-medium);
    pointer-events: none;
  }

  .exp-yearnav-mobile--visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  @media (min-width: 768px) {
    .exp-yearnav-mobile {
      display: none;
    }
  }

  .exp-yearnav-mobile__btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    background: var(--exp-accent);
    color: var(--exp-bg);
    border: none;
    padding: 0.5rem 1rem;
    font-family: var(--exp-font-display);
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 0 20px var(--exp-accent-glow);
    transition: all var(--exp-transition-fast);
  }

  .exp-yearnav-mobile__btn:hover {
    transform: scale(1.05);
  }

  .exp-yearnav-mobile__btn:focus-visible {
    outline: 2px solid var(--exp-text);
    outline-offset: 2px;
  }

  .exp-yearnav-mobile__dropdown {
    position: absolute;
    bottom: 100%;
    right: 0;
    margin-bottom: 0.5rem;
    background: var(--exp-bg-surface);
    border: 1px solid var(--exp-border);
    max-height: 300px;
    overflow-y: auto;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: all var(--exp-transition-fast);
    scrollbar-width: thin;
    scrollbar-color: var(--exp-border) transparent;
  }

  .exp-yearnav-mobile__dropdown--open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .exp-yearnav-mobile__list {
    display: flex;
    flex-direction: column;
    padding: 0.25rem;
  }

  .exp-yearnav-mobile__link {
    display: block;
    padding: 0.5rem 1.2rem;
    font-family: var(--exp-font-display);
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--exp-text-muted);
    text-decoration: none;
    text-align: center;
    transition: all var(--exp-transition-fast);
    min-width: 80px;
  }

  .exp-yearnav-mobile__link:hover {
    color: var(--exp-text);
    background: var(--exp-bg-elevated);
  }

  .exp-yearnav-mobile__link--active {
    color: var(--exp-accent);
    font-weight: 700;
    background: var(--exp-bg-elevated);
  }

  @media (max-width: 480px) {
    .exp-yearnav-mobile {
      bottom: var(--exp-space-md);
      right: var(--exp-space-sm);
    }
  }
</style>
