---
/**
 * Experimental Template - YearNav
 * Horizontal sticky bar. Years as inline items, single row, overflow-x auto.
 * Active year tracked via IntersectionObserver, smooth scroll on click.
 */
interface Props {
  years: number[];
  idPrefix?: string;
  ariaLabel?: string;
}

const { years, idPrefix = 'year', ariaLabel = 'Jump to year' } = Astro.props;
const sortedYears = [...years].sort((a, b) => b - a);
---

<nav class="exp-yearnav" aria-label={ariaLabel} data-id-prefix={idPrefix}>
  <div class="exp-yearnav__scroll">
    {sortedYears.map((year) => (
      <a
        href={`#${idPrefix}-${year}`}
        class="exp-yearnav__link"
        data-year={year}
        aria-label={`Jump to ${year}`}
      >
        {year}
      </a>
    ))}
  </div>
</nav>

<script>
  (function () {
    function initExpYearNav() {
      const nav = document.querySelector('.exp-yearnav') as HTMLElement | null;
      if (!nav) return;

      const idPrefix = nav.getAttribute('data-id-prefix') || 'year';
      const links = nav.querySelectorAll('.exp-yearnav__link');
      const sections: Element[] = [];

      links.forEach((link) => {
        const href = link.getAttribute('href');
        if (href) {
          const section = document.querySelector(href);
          if (section) sections.push(section);
        }
      });

      if (sections.length === 0) return;

      let currentYear: string | null = null;

      function updateActiveYear(year: string) {
        if (year === currentYear) return;
        currentYear = year;

        links.forEach((link) => {
          const linkYear = link.getAttribute('data-year');
          const isActive = linkYear === year;
          link.classList.toggle('exp-yearnav__link--active', isActive);
          link.setAttribute('aria-current', isActive ? 'true' : 'false');

          if (isActive) {
            link.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
          }
        });
      }

      // Intersection Observer for active year tracking
      const observer = new IntersectionObserver(
        (entries) => {
          const visible = entries.filter((e) => e.isIntersecting);
          if (visible.length > 0) {
            visible.sort((a, b) => a.boundingClientRect.top - b.boundingClientRect.top);
            const year = visible[0].target.id.replace(new RegExp(`^${idPrefix}-`), '');
            updateActiveYear(year);
          }
        },
        { rootMargin: '-20% 0px -60% 0px', threshold: 0 }
      );

      sections.forEach((s) => observer.observe(s));

      // Show/hide nav based on whether first section is visible
      const showObserver = new IntersectionObserver(
        (entries) => {
          nav.classList.toggle('exp-yearnav--visible', !entries[0].isIntersecting);
        },
        { threshold: 0.5 }
      );

      if (sections[0]) {
        showObserver.observe(sections[0]);
      }

      // Smooth scroll on click
      function handleClick(e: Event) {
        e.preventDefault();
        const link = e.currentTarget as HTMLElement;
        const href = link.getAttribute('href');
        if (!href) return;

        const target = document.querySelector(href);
        if (!target) return;

        const offset = 100;
        const pos = target.getBoundingClientRect().top + window.pageYOffset - offset;
        window.scrollTo({ top: pos, behavior: 'smooth' });
      }

      links.forEach((link) => link.addEventListener('click', handleClick));

      // Keyboard navigation
      nav.addEventListener('keydown', (event) => {
        const e = event as KeyboardEvent;
        const allLinks = Array.from(links);
        const idx = allLinks.findIndex((l) => l === document.activeElement);
        if (idx === -1) return;

        let next = idx;
        switch (e.key) {
          case 'ArrowRight':
          case 'ArrowDown':
            e.preventDefault();
            next = Math.min(idx + 1, allLinks.length - 1);
            break;
          case 'ArrowLeft':
          case 'ArrowUp':
            e.preventDefault();
            next = Math.max(idx - 1, 0);
            break;
          case 'Home':
            e.preventDefault();
            next = 0;
            break;
          case 'End':
            e.preventDefault();
            next = allLinks.length - 1;
            break;
        }

        if (next !== idx) {
          (allLinks[next] as HTMLElement).focus();
        }
      });

      // Initial state
      if (sections[0]) {
        const firstYear = sections[0].id.replace(new RegExp(`^${idPrefix}-`), '');
        updateActiveYear(firstYear);
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initExpYearNav);
    } else {
      initExpYearNav();
    }
  })();
</script>

<style>
  .exp-yearnav {
    position: sticky;
    top: 0;
    z-index: 40;
    background: var(--exp-bg);
    border-bottom: 1px solid var(--exp-border);
    opacity: 0;
    transform: translateY(-100%);
    transition: all var(--exp-transition-medium);
    pointer-events: none;
  }

  .exp-yearnav--visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* Account for dev banner when present */
  .page-content .exp-yearnav {
    top: 48px;
  }

  .exp-yearnav__scroll {
    display: flex;
    overflow-x: auto;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding: 0 var(--exp-space-md);
  }

  .exp-yearnav__scroll::-webkit-scrollbar {
    display: none;
  }

  .exp-yearnav__link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1rem;
    font-family: var(--exp-font-display);
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--exp-text-muted);
    text-decoration: none;
    white-space: nowrap;
    transition: all var(--exp-transition-fast);
    border-bottom: 2px solid transparent;
    flex-shrink: 0;
  }

  .exp-yearnav__link:hover {
    color: var(--exp-text);
  }

  .exp-yearnav__link--active {
    color: var(--exp-accent);
    border-bottom-color: var(--exp-accent);
    font-weight: 700;
  }

  .exp-yearnav__link:focus-visible {
    outline: 2px solid var(--exp-accent);
    outline-offset: -2px;
  }
</style>
