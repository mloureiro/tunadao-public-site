---
/**
 * Advanced Template Footer
 *
 * Minimal, refined
 * Clean typography
 * Dark background
 */
import SocialLinks from '@components/SocialLinks.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getContactInfo } from '@lib/cms';
import { footerSections } from '@data/navigation';

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
const foundingYear = 1998;

const contactInfo = await getContactInfo();

const footerLinks = footerSections
  .map((section) => ({
    title: t(section.titleKey),
    links: section.items
      .filter((item) => !item.hidden)
      .map((item) => ({
        label: t(item.labelKey),
        href: getLocalizedPath(item.href, lang),
      })),
  }))
  .filter((section) => section.links.length > 0);
---

<footer class="adv-footer">
  <div class="advanced-container">
    <!-- Top section with logo and links -->
    <div class="adv-footer__top">
      <div class="adv-footer__brand">
        <a href={getLocalizedPath('/', lang)} class="adv-footer__logo">
          <span class="adv-footer__logo-text">Tunadao</span>
          <span class="adv-footer__logo-year">1998</span>
        </a>
        <p class="adv-footer__tagline">{t('home.subtitle')}</p>
        <div class="adv-footer__social">
          <SocialLinks />
        </div>
      </div>

      <div class="adv-footer__links">
        {
          footerLinks.map((section) => (
            <div class="adv-footer__section">
              <h3 class="adv-footer__title">{section.title}</h3>
              <ul class="adv-footer__list">
                {section.links.map((link) => (
                  <li>
                    <a href={link.href} class="adv-footer__link">
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }

        <div class="adv-footer__section">
          <h3 class="adv-footer__title">{t('footer.contact')}</h3>
          <address class="adv-footer__address">
            {
              contactInfo.email && (
                <a href={`mailto:${contactInfo.email}`} class="adv-footer__link">
                  {contactInfo.email}
                </a>
              )
            }
          </address>
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="adv-footer__bottom">
      <p class="adv-footer__years">
        {foundingYear} - {currentYear}
      </p>
      <p class="adv-footer__copyright">&copy; Tunadao 1998. {t('footer.copyright')}.</p>
    </div>
  </div>
</footer>

<style>
  .adv-footer {
    background-color: var(--advanced-bg);
    border-top: 1px solid var(--advanced-border-subtle);
    padding: var(--space-12) 0 var(--space-8);
    margin-top: var(--advanced-section-padding);
  }

  @media (min-width: 768px) {
    .adv-footer {
      padding: var(--space-16) 0 var(--space-8);
    }
  }

  .adv-footer__top {
    display: grid;
    gap: var(--space-10);
  }

  @media (min-width: 768px) {
    .adv-footer__top {
      grid-template-columns: 1.5fr 2fr;
      gap: var(--space-16);
    }
  }

  /* Brand */
  .adv-footer__brand {
    max-width: 300px;
  }

  .adv-footer__logo {
    display: inline-flex;
    align-items: baseline;
    gap: 0.375rem;
    text-decoration: none;
    color: var(--advanced-text);
  }

  .adv-footer__logo-text {
    font-size: 1.125rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .adv-footer__logo-year {
    font-size: 0.75rem;
    color: var(--advanced-accent);
  }

  .adv-footer__tagline {
    margin-top: var(--space-3);
    font-size: 0.875rem;
    color: var(--advanced-text-secondary);
    line-height: 1.6;
  }

  .adv-footer__social {
    margin-top: var(--space-6);
  }

  /* Links grid */
  .adv-footer__links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6) var(--space-8);
  }

  @media (min-width: 640px) {
    .adv-footer__links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .adv-footer__section {
    min-width: 0;
  }

  .adv-footer__title {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--advanced-text-muted);
    margin-bottom: var(--space-4);
  }

  .adv-footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .adv-footer__list li {
    margin-bottom: var(--space-2);
  }

  .adv-footer__link {
    font-size: 0.875rem;
    color: var(--advanced-text-secondary);
    text-decoration: none;
    transition: color 200ms ease;
  }

  .adv-footer__link:hover {
    color: var(--advanced-text);
  }

  .adv-footer__address {
    font-style: normal;
  }

  /* Bottom */
  .adv-footer__bottom {
    margin-top: var(--space-12);
    padding-top: var(--space-6);
    border-top: 1px solid var(--advanced-border-subtle);
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    text-align: center;
  }

  @media (min-width: 768px) {
    .adv-footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .adv-footer__years {
    font-size: 0.875rem;
    font-weight: 300;
    letter-spacing: 0.2em;
    color: var(--advanced-text-muted);
  }

  .adv-footer__copyright {
    font-size: 0.75rem;
    color: var(--advanced-text-muted);
  }
</style>
