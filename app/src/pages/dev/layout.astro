---
import DevLayout from '@layouts/DevLayout.astro';
import ThemeToggle from '@components/ThemeToggle.astro';
import DesignThemeToggle from '@components/DesignThemeToggle.astro';
import Card from '@components/Card.astro';
import Button from '@components/Button.astro';
---

<DevLayout title="Layout" currentPage="layout">
  <section class="intro-section">
    <h2>Layout & Theme System</h2>
    <p>
      The design system supports two dimensions of theming: <strong>Color Mode</strong> (light/dark)
      and <strong>Design Theme</strong> (classic/noite).
    </p>

    <div class="theme-controls">
      <div class="theme-control">
        <label>Color Mode</label>
        <ThemeToggle />
      </div>
      <div class="theme-control">
        <label>Design Theme</label>
        <DesignThemeToggle showLabels />
      </div>
    </div>
  </section>

  <!-- Theme Comparison -->
  <section class="comparison-section">
    <h2>Theme Comparison</h2>

    <div class="comparison-grid">
      <!-- Classic Theme Preview -->
      <div class="theme-preview theme-preview--classic" data-design="classic">
        <div class="theme-preview__header">
          <h3>Classic Theme</h3>
          <span class="theme-preview__badge">Traditional</span>
        </div>
        <div class="theme-preview__content">
          <p class="theme-preview__description">
            Traditional layout with standard spacing, familiar borders, and classic typography.
            Best for a formal, established feel.
          </p>
          <div class="theme-preview__features">
            <div class="feature">
              <span class="feature__label">Spacing</span>
              <span class="feature__value">Standard</span>
            </div>
            <div class="feature">
              <span class="feature__label">Borders</span>
              <span class="feature__value">1px solid</span>
            </div>
            <div class="feature">
              <span class="feature__label">Radius</span>
              <span class="feature__value">0.5rem</span>
            </div>
            <div class="feature">
              <span class="feature__label">Headings</span>
              <span class="feature__value">Bold 700</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Noite Theme Preview -->
      <div class="theme-preview theme-preview--noite" data-design="noite">
        <div class="theme-preview__header">
          <h3>Noite Theme</h3>
          <span class="theme-preview__badge">Modern</span>
        </div>
        <div class="theme-preview__content">
          <p class="theme-preview__description">
            Dark, atmospheric design with generous spacing, subtle glow effects, and bold
            typography. Perfect for a contemporary feel.
          </p>
          <div class="theme-preview__features">
            <div class="feature">
              <span class="feature__label">Spacing</span>
              <span class="feature__value">Generous</span>
            </div>
            <div class="feature">
              <span class="feature__label">Borders</span>
              <span class="feature__value">None</span>
            </div>
            <div class="feature">
              <span class="feature__label">Radius</span>
              <span class="feature__value">1rem</span>
            </div>
            <div class="feature">
              <span class="feature__label">Headings</span>
              <span class="feature__value">Extra Bold 800</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Live Demo -->
  <section class="demo-section">
    <h2>Live Demo</h2>
    <p>Toggle the design theme above to see these elements change in real-time.</p>

    <div class="demo-grid">
      <!-- Hero Demo -->
      <div class="demo-card demo-hero">
        <h3>Hero Section</h3>
        <div class="demo-hero__preview">
          <div class="demo-hero__title">Palmar√©s</div>
          <div class="demo-hero__subtitle">Our awards and achievements</div>
        </div>
        <p class="demo-note">
          Noite: Larger padding, tighter letter-spacing, glowing accents
        </p>
      </div>

      <!-- Card Demo -->
      <div class="demo-card demo-cards">
        <h3>Cards</h3>
        <div class="demo-cards__preview">
          <div class="demo-card-item">
            <div class="demo-card-item__image"></div>
            <div class="demo-card-item__content">
              <strong>Festival Example</strong>
              <span>Location</span>
            </div>
          </div>
        </div>
        <p class="demo-note">
          Noite: Larger radius, no borders, enhanced shadows
        </p>
      </div>

      <!-- Grid Demo -->
      <div class="demo-card demo-grid-layout">
        <h3>Grid Spacing</h3>
        <div class="demo-grid__preview">
          <div class="demo-grid-item"></div>
          <div class="demo-grid-item"></div>
          <div class="demo-grid-item"></div>
          <div class="demo-grid-item"></div>
        </div>
        <p class="demo-note">
          Noite: Wider gaps between items
        </p>
      </div>

      <!-- Buttons Demo -->
      <div class="demo-card demo-buttons">
        <h3>Buttons</h3>
        <div class="demo-buttons__preview">
          <Button variant="primary">Primary</Button>
          <Button variant="outline">Outline</Button>
        </div>
        <p class="demo-note">
          Noite: Glow effects on hover
        </p>
      </div>
    </div>
  </section>

  <!-- Usage Guide -->
  <section class="usage-section">
    <h2>Usage</h2>

    <div class="code-block">
      <h3>HTML Attribute</h3>
      <pre><code>&lt;html data-design="noite"&gt;</code></pre>
    </div>

    <div class="code-block">
      <h3>Environment Variable</h3>
      <pre><code>PUBLIC_DESIGN_THEME=noite</code></pre>
    </div>

    <div class="code-block">
      <h3>CSS Usage</h3>
      <pre><code>.my-component {'{'}
  padding: var(--design-card-padding);
  border-radius: var(--design-card-radius);
  border: var(--design-border-width) var(--design-border-style) var(--color-border);
{'}'}</code></pre>
    </div>

    <div class="code-block">
      <h3>Available Design Tokens</h3>
      <pre><code>--design-hero-padding
--design-section-gap
--design-card-radius
--design-card-padding
--design-heading-weight
--design-heading-tracking
--design-border-style
--design-border-width
--design-grid-gap
--design-container-padding
--design-title-scale
--design-body-scale
--glow-primary
--glow-secondary</code></pre>
    </div>
  </section>

  <style>
    .intro-section {
      margin-bottom: var(--space-8);
    }

    .intro-section h2 {
      font-size: var(--font-size-2xl);
      font-weight: 700;
      margin-bottom: var(--space-2);
    }

    .intro-section p {
      color: var(--color-text-muted);
      margin-bottom: var(--space-6);
      max-width: 600px;
    }

    .theme-controls {
      display: flex;
      gap: var(--space-6);
      flex-wrap: wrap;
      padding: var(--space-4);
      background-color: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
    }

    .theme-control {
      display: flex;
      align-items: center;
      gap: var(--space-3);
    }

    .theme-control label {
      font-size: var(--font-size-sm);
      font-weight: 500;
      color: var(--color-text-muted);
    }

    /* Comparison Section */
    .comparison-section {
      margin-bottom: var(--space-12);
    }

    .comparison-section h2 {
      font-size: var(--font-size-2xl);
      font-weight: 700;
      margin-bottom: var(--space-6);
    }

    .comparison-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    @media (min-width: 768px) {
      .comparison-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .theme-preview {
      border-radius: var(--radius-xl);
      overflow: hidden;
    }

    .theme-preview--classic {
      background-color: #ffffff;
      border: 1px solid #dee2e6;
    }

    .theme-preview--noite {
      background-color: #0a0a0f;
      border: none;
      box-shadow: 0 0 30px rgba(124, 106, 255, 0.1);
    }

    .theme-preview__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-4);
      border-bottom: 1px solid var(--color-border);
    }

    .theme-preview--noite .theme-preview__header {
      border-bottom-color: #2a2a3a;
    }

    .theme-preview__header h3 {
      font-size: var(--font-size-lg);
      font-weight: 600;
      margin: 0;
    }

    .theme-preview--noite .theme-preview__header h3 {
      color: #f0f0f5;
    }

    .theme-preview__badge {
      font-size: var(--font-size-xs);
      font-weight: 500;
      padding: var(--space-1) var(--space-2);
      border-radius: var(--radius-full);
      background-color: var(--color-primary-light);
      color: var(--color-primary);
    }

    .theme-preview--noite .theme-preview__badge {
      background-color: rgba(124, 106, 255, 0.2);
      color: #9d8fff;
    }

    .theme-preview__content {
      padding: var(--space-4);
    }

    .theme-preview__description {
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      margin-bottom: var(--space-4);
    }

    .theme-preview--noite .theme-preview__description {
      color: #8888a0;
    }

    .theme-preview__features {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-3);
    }

    .feature {
      display: flex;
      flex-direction: column;
      gap: var(--space-1);
    }

    .feature__label {
      font-size: var(--font-size-xs);
      color: var(--color-text-muted);
    }

    .theme-preview--noite .feature__label {
      color: #6666777;
    }

    .feature__value {
      font-size: var(--font-size-sm);
      font-weight: 600;
    }

    .theme-preview--noite .feature__value {
      color: #f0f0f5;
    }

    /* Demo Section */
    .demo-section {
      margin-bottom: var(--space-12);
    }

    .demo-section > h2 {
      font-size: var(--font-size-2xl);
      font-weight: 700;
      margin-bottom: var(--space-2);
    }

    .demo-section > p {
      color: var(--color-text-muted);
      margin-bottom: var(--space-6);
    }

    .demo-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--design-grid-gap);
    }

    @media (min-width: 768px) {
      .demo-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .demo-card {
      background-color: var(--color-surface);
      border: var(--design-border-width) var(--design-border-style) var(--color-border);
      border-radius: var(--design-card-radius);
      padding: var(--design-card-padding);
    }

    .demo-card h3 {
      font-size: var(--font-size-sm);
      font-weight: 600;
      color: var(--color-text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: var(--space-4);
    }

    .demo-note {
      font-size: var(--font-size-xs);
      color: var(--color-text-muted);
      margin-top: var(--space-3);
      padding-top: var(--space-3);
      border-top: 1px dashed var(--color-border);
    }

    /* Hero Demo */
    .demo-hero__preview {
      background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
      padding: var(--design-hero-padding);
      border-radius: var(--radius-lg);
      text-align: center;
      box-shadow: var(--glow-primary);
    }

    .demo-hero__title {
      font-size: calc(var(--font-size-2xl) * var(--design-title-scale));
      font-weight: var(--design-heading-weight);
      letter-spacing: var(--design-heading-tracking);
      color: white;
      margin-bottom: var(--space-2);
    }

    .demo-hero__subtitle {
      font-size: calc(var(--font-size-base) * var(--design-body-scale));
      color: rgba(255, 255, 255, 0.8);
    }

    /* Card Demo */
    .demo-cards__preview {
      display: flex;
      flex-direction: column;
      gap: var(--space-3);
    }

    .demo-card-item {
      display: flex;
      gap: var(--space-3);
      padding: var(--design-card-padding);
      background-color: var(--color-background);
      border: var(--design-border-width) var(--design-border-style) var(--color-border);
      border-radius: var(--design-card-radius);
    }

    .demo-card-item__image {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
      border-radius: var(--radius-md);
      flex-shrink: 0;
    }

    .demo-card-item__content {
      display: flex;
      flex-direction: column;
      gap: var(--space-1);
    }

    .demo-card-item__content strong {
      font-size: var(--font-size-sm);
    }

    .demo-card-item__content span {
      font-size: var(--font-size-xs);
      color: var(--color-text-muted);
    }

    /* Grid Demo */
    .demo-grid__preview {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--design-grid-gap);
    }

    .demo-grid-item {
      height: 60px;
      background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
      border-radius: var(--radius-md);
    }

    /* Buttons Demo */
    .demo-buttons__preview {
      display: flex;
      gap: var(--space-3);
      flex-wrap: wrap;
    }

    /* Usage Section */
    .usage-section {
      margin-bottom: var(--space-12);
    }

    .usage-section h2 {
      font-size: var(--font-size-2xl);
      font-weight: 700;
      margin-bottom: var(--space-6);
    }

    .code-block {
      margin-bottom: var(--space-4);
      background-color: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      overflow: hidden;
    }

    .code-block h3 {
      font-size: var(--font-size-sm);
      font-weight: 600;
      padding: var(--space-3) var(--space-4);
      background-color: var(--color-background);
      border-bottom: 1px solid var(--color-border);
      margin: 0;
    }

    .code-block pre {
      margin: 0;
      padding: var(--space-4);
      overflow-x: auto;
    }

    .code-block code {
      font-family: var(--font-family-mono);
      font-size: var(--font-size-sm);
      color: var(--color-primary);
    }
  </style>
</DevLayout>
