---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getCitadaoEditions, getCitadaoEditionByYear } from '@lib/cms';

export async function getStaticPaths() {
  const languages: (string | undefined)[] = [undefined, 'en'];
  const paths: { params: { lang: string | undefined; year: string } }[] = [];

  // Fetch all editions from CMS (with fallback)
  const editions = await getCitadaoEditions();

  for (const lang of languages) {
    for (const edition of editions) {
      paths.push({ params: { lang, year: String(edition.year) } });
    }
  }

  return paths;
}

const { lang, year } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

// Fetch the specific edition
const edition = await getCitadaoEditionByYear(parseInt(year as string));

if (!edition) {
  return Astro.redirect(l('/citadao'));
}

// Fetch all editions for navigation
const allEditions = await getCitadaoEditions();
const allYears = allEditions.map(e => e.year).sort((a, b) => b - a);
const currentIndex = allYears.indexOf(edition.year);
const prevYear = currentIndex < allYears.length - 1 ? allYears[currentIndex + 1] : null;
const nextYear = currentIndex > 0 ? allYears[currentIndex - 1] : null;
---

<Layout
  title={`${edition.edition}${t('citadao.edition')} CITADÃO ${edition.year} | Tunadão 1998`}
  description={`CITADÃO ${edition.year} - ${edition.edition}${t('citadao.edition')} ${t('citadao.editionDescription')}`}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__breadcrumb">
        <a href={l('/citadao')}>← {t('citadao.allEditions')}</a>
      </div>
      <div class="hero__badge">{edition.edition}{t('citadao.edition')}</div>
      <h1 class="hero__title">CITADÃO {edition.year}</h1>
      {edition.notes && <p class="hero__notes">{edition.notes}</p>}
    </div>
  </section>

  <!-- Event Info -->
  <section class="info">
    <div class="container">
      <div class="info__grid">
        <div class="info__item">
          <div class="info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.date')}</span>
            <span class="info__value">{edition.date}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.venue')}</span>
            <span class="info__value">{edition.venue}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.tunas')}</span>
            <span class="info__value">{edition.tunas.length} {t('citadao.tunasCount')}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tunas Section -->
  <section class="tunas">
    <div class="container">
      <h2 class="section-title">{t('citadao.tunas')}</h2>
      <div class="tunas__list">
        {edition.tunas.map((tuna, index) => (
          <div class="tuna-item">
            <span class="tuna-item__number">{index + 1}</span>
            <span class="tuna-item__name">{tuna}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Guests Section -->
  {edition.guests.length > 0 && (
    <section class="guests">
      <div class="container">
        <h2 class="section-title">{t('citadao.guests')}</h2>
        <div class="guests__list">
          {edition.guests.map((guest) => (
            <div class="guest-item">{guest}</div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Awards Section -->
  {edition.awards && (
    <section class="awards">
      <div class="container">
        <h2 class="section-title">{t('citadao.awards')}</h2>
        <div class="awards__grid">
          {Object.entries(edition.awards).map(([key, winner]) => (
            <div class="award-item" class:list={{ 'award-item--highlight': key === 'melhorTuna' }}>
              <span class="award-item__label">{t(`awards.${key}`)}</span>
              <span class="award-item__winner">{winner}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <section class="navigation">
    <div class="container">
      <div class="navigation__buttons">
        {prevYear && (
          <Button href={l(`/citadao/${prevYear}`)} variant="outline">
            ← CITADÃO {prevYear}
          </Button>
        )}
        <Button href={l('/citadao')} variant="secondary">
          {t('citadao.allEditions')}
        </Button>
        {nextYear && (
          <Button href={l(`/citadao/${nextYear}`)} variant="outline">
            CITADÃO {nextYear} →
          </Button>
        )}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    text-align: center;
  }

  .hero__breadcrumb {
    margin-bottom: var(--space-4);
  }

  .hero__breadcrumb a {
    color: var(--color-text-inverted);
    opacity: 0.8;
    text-decoration: none;
    font-size: var(--text-sm);
    transition: opacity var(--transition-fast);
  }

  .hero__breadcrumb a:hover {
    opacity: 1;
  }

  .hero__badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 500;
    margin-bottom: var(--space-3);
  }

  .hero__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .hero__notes {
    font-size: var(--text-lg);
    opacity: 0.9;
    background: var(--color-secondary);
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md);
    margin-top: var(--space-4);
  }

  /* Section Title */
  .section-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  /* Info Section */
  .info {
    padding: var(--space-8) 0;
    background-color: var(--color-surface);
  }

  .info__grid {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .info__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .info__item {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .info__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-md);
    color: var(--color-text-inverted);
    flex-shrink: 0;
  }

  .info__content {
    display: flex;
    flex-direction: column;
  }

  .info__label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .info__value {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
  }

  /* Tunas Section */
  .tunas {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .tunas__list {
    display: grid;
    gap: var(--space-3);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .tunas__list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .tuna-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .tuna-item__number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    flex-shrink: 0;
  }

  .tuna-item__name {
    font-size: var(--text-base);
    color: var(--color-text);
  }

  /* Guests Section */
  .guests {
    padding: var(--space-12) 0;
    background-color: var(--color-surface);
  }

  .guests__list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .guest-item {
    padding: var(--space-3) var(--space-4);
    background-color: var(--color-background);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  /* Awards Section */
  .awards {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .awards__grid {
    display: grid;
    gap: var(--space-3);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .awards__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .awards__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .award-item {
    display: flex;
    flex-direction: column;
    padding: var(--space-4);
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .award-item--highlight {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    border: none;
    grid-column: span 1;
  }

  @media (min-width: 640px) {
    .award-item--highlight {
      grid-column: span 2;
    }
  }

  @media (min-width: 1024px) {
    .award-item--highlight {
      grid-column: span 3;
    }
  }

  .award-item__label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-1);
  }

  .award-item--highlight .award-item__label {
    color: rgba(255, 255, 255, 0.8);
  }

  .award-item__winner {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
  }

  .award-item--highlight .award-item__winner {
    color: var(--color-text-inverted);
    font-size: var(--text-xl);
  }

  /* Navigation Section */
  .navigation {
    padding: var(--space-8) 0;
    background-color: var(--color-surface);
  }

  .navigation__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }
</style>
