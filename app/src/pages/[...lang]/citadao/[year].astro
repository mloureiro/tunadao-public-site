---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import Award from '@components/Award.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getCitadaoEditions, getCitadaoEditionByYear } from '@lib/cms';
import { Icon } from '@ui/icons';
import type { FrontendTunaWithLogo } from '@lib/cms/types';

// Award priority for sorting (lower = more important)
const AWARD_PRIORITY: Record<string, number> = {
  'melhor-tuna': 1,
  'segunda-melhor-tuna': 2,
  'terceira-melhor-tuna': 3,
  'tuna-mais-tuna': 4,
  'tuna-do-publico': 5,
};

function getAwardPriority(awardKey: string): number {
  return AWARD_PRIORITY[awardKey] ?? 100;
}

export async function getStaticPaths() {
  const languages: (string | undefined)[] = [undefined, 'en'];
  const paths: { params: { lang: string | undefined; year: string } }[] = [];

  // Fetch all editions from CMS (with fallback)
  const editions = await getCitadaoEditions();

  for (const lang of languages) {
    for (const edition of editions) {
      paths.push({ params: { lang, year: String(edition.year) } });
    }
  }

  return paths;
}

const { lang, year } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

// Fetch the specific edition
const edition = await getCitadaoEditionByYear(parseInt(year as string));

if (!edition) {
  return Astro.redirect(l('/citadao'));
}

// Fetch all editions for navigation
const allEditions = await getCitadaoEditions();
const allYears = allEditions.map((e) => e.year).sort((a, b) => b - a);
const currentIndex = allYears.indexOf(edition.year);
const prevYear = currentIndex < allYears.length - 1 ? allYears[currentIndex + 1] : null;
const nextYear = currentIndex > 0 ? allYears[currentIndex - 1] : null;

// Group awards by tuna
interface TunaWithAwards {
  tuna: FrontendTunaWithLogo;
  awards: string[];
  bestAwardPriority: number;
}

const tunaAwardsMap = new Map<string, string[]>();

if (edition.awards) {
  for (const [awardKey, tunaShortName] of Object.entries(edition.awards)) {
    const existing = tunaAwardsMap.get(tunaShortName) || [];
    existing.push(awardKey);
    tunaAwardsMap.set(tunaShortName, existing);
  }
}

// Build list of tunas with their awards
const tunasWithAwards: TunaWithAwards[] = edition.tunas.map((tuna) => {
  const awards = tunaAwardsMap.get(tuna.shortName) || [];
  const bestAwardPriority = awards.length > 0
    ? Math.min(...awards.map(getAwardPriority))
    : Infinity;
  return { tuna, awards, bestAwardPriority };
});

// Sort: tunas with awards first (by best award priority), then tunas without awards
tunasWithAwards.sort((a, b) => {
  // Both have awards - sort by best award priority
  if (a.awards.length > 0 && b.awards.length > 0) {
    return a.bestAwardPriority - b.bestAwardPriority;
  }
  // One has awards, one doesn't - awards first
  if (a.awards.length > 0) return -1;
  if (b.awards.length > 0) return 1;
  // Neither has awards - keep original order
  return 0;
});

// Split into tunas with awards and tunas without
const tunasWithPrizes = tunasWithAwards.filter((t) => t.awards.length > 0);
const tunasWithoutPrizes = tunasWithAwards.filter((t) => t.awards.length === 0);
---

<Layout
  title={`${edition.edition}${t('citadao.edition')} CITADÃO ${edition.year} | Tunadão 1998`}
  description={`CITADÃO ${edition.year} - ${edition.edition}${t('citadao.edition')} ${t('citadao.editionDescription')}`}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__breadcrumb">
        <a href={l('/citadao')}>← {t('citadao.allEditions')}</a>
      </div>
      <div class="hero__badge">{edition.edition}{t('citadao.edition')}</div>
      <h1 class="hero__title">CITADÃO {edition.year}</h1>
      {edition.notes && <p class="hero__notes">{edition.notes}</p>}
    </div>
  </section>

  <!-- Event Info -->
  <section class="info">
    <div class="container">
      <div class="info__grid">
        <div class="info__item">
          <div class="info__icon">
            <Icon name="calendar" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.date')}</span>
            <span class="info__value">{edition.date}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <Icon name="map-pin" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.venue')}</span>
            <span class="info__value">{edition.venue}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <Icon name="music" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.tunas')}</span>
            <span class="info__value">{edition.tunas.length} {t('citadao.tunasCount')}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tunas with Awards Section -->
  {tunasWithPrizes.length > 0 && (
    <section class="results">
      <div class="container">
        <h2 class="section-title">{t('citadao.awards')}</h2>
        <div class="results__list">
          {tunasWithPrizes.map(({ tuna, awards }) => (
            <div class="result-card" class:list={{ 'result-card--winner': awards.includes('melhor-tuna') }}>
              <div class="result-card__tuna">
                <div class="result-card__avatar">
                  {tuna.logoUrl ? (
                    <img
                      src={tuna.logoUrl}
                      alt={tuna.shortName}
                      class="result-card__img"
                      loading="lazy"
                    />
                  ) : (
                    <div class="result-card__placeholder">
                      <span>{tuna.shortName.charAt(0)}</span>
                    </div>
                  )}
                </div>
                <div class="result-card__info">
                  <span class="result-card__name">{tuna.shortName}</span>
                  <span class="result-card__fullname">{tuna.fullName}</span>
                </div>
              </div>
              <div class="result-card__awards">
                {awards.map((awardKey) => (
                  <Award awardKey={awardKey} size="sm">{t(`awards.${awardKey}`)}</Award>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Tunas without Awards Section -->
  {tunasWithoutPrizes.length > 0 && (
    <section class="participants">
      <div class="container">
        <h2 class="section-title">{t('citadao.participants')}</h2>
        <div class="participants__grid">
          {tunasWithoutPrizes.map(({ tuna }) => (
            <div class="participant-card">
              <div class="participant-card__avatar">
                {tuna.logoUrl ? (
                  <img
                    src={tuna.logoUrl}
                    alt={tuna.shortName}
                    class="participant-card__img"
                    loading="lazy"
                  />
                ) : (
                  <div class="participant-card__placeholder">
                    <span>{tuna.shortName.charAt(0)}</span>
                  </div>
                )}
              </div>
              <div class="participant-card__info">
                <span class="participant-card__name">{tuna.shortName}</span>
                <span class="participant-card__fullname">{tuna.fullName}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Guests Section -->
  {edition.guests.length > 0 && (
    <section class="guests">
      <div class="container">
        <h2 class="section-title">{t('citadao.guests')}</h2>
        <div class="guests__list">
          {edition.guests.map((guest) => (
            <div class="guest-card">
              <div class="guest-card__avatar">
                {guest.logoUrl ? (
                  <img
                    src={guest.logoUrl}
                    alt={guest.shortName}
                    class="guest-card__img"
                    loading="lazy"
                  />
                ) : (
                  <div class="guest-card__placeholder">
                    <span>{guest.shortName.charAt(0)}</span>
                  </div>
                )}
              </div>
              <div class="guest-card__info">
                <span class="guest-card__name">{guest.shortName}</span>
                <span class="guest-card__fullname">{guest.fullName}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <section class="navigation">
    <div class="container">
      <div class="navigation__buttons">
        {
          prevYear && (
            <Button href={l(`/citadao/${prevYear}`)} variant="outline">
              ← CITADÃO {prevYear}
            </Button>
          )
        }
        <Button href={l('/citadao')} variant="secondary">
          {t('citadao.allEditions')}
        </Button>
        {
          nextYear && (
            <Button href={l(`/citadao/${nextYear}`)} variant="outline">
              CITADÃO {nextYear} →
            </Button>
          )
        }
      </div>
    </div>
  </section>
</Layout>

