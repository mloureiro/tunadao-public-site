---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import TunaCard from '@components/citadao/TunaCard.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getCitadaoEditions, getCitadaoEditionByYear, splitTunasByAwards } from '@lib/cms';
import { Icon } from '@ui/icons';

export async function getStaticPaths() {
  const languages: (string | undefined)[] = [undefined, 'en'];
  const paths: { params: { lang: string | undefined; year: string } }[] = [];
  const editions = await getCitadaoEditions();

  for (const lang of languages) {
    for (const edition of editions) {
      paths.push({ params: { lang, year: String(edition.year) } });
    }
  }
  return paths;
}

const { lang, year } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

const edition = await getCitadaoEditionByYear(parseInt(year as string));
if (!edition) {
  return Astro.redirect(l('/citadao'));
}

// Navigation between editions
const allEditions = await getCitadaoEditions();
const allYears = allEditions.map((e) => e.year).sort((a, b) => b - a);
const currentIndex = allYears.indexOf(edition.year);
const prevYear = currentIndex < allYears.length - 1 ? allYears[currentIndex + 1] : null;
const nextYear = currentIndex > 0 ? allYears[currentIndex - 1] : null;

// Split tunas into those with and without prizes
const { withPrizes: tunasWithPrizes, withoutPrizes: tunasWithoutPrizes } = splitTunasByAwards(edition);
---

<Layout
  title={`${edition.edition}${t('citadao.edition')} CITADÃO ${edition.year} | Tunadão 1998`}
  description={`CITADÃO ${edition.year} - ${edition.edition}${t('citadao.edition')} ${t('citadao.editionDescription')}`}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__breadcrumb">
        <a href={l('/citadao')}>← {t('citadao.allEditions')}</a>
      </div>
      <div class="hero__badge">{edition.edition}{t('citadao.edition')}</div>
      <h1 class="hero__title">CITADÃO {edition.year}</h1>
      {edition.notes && <p class="hero__notes">{edition.notes}</p>}
    </div>
  </section>

  <!-- Event Info -->
  <section class="info">
    <div class="container">
      <div class="info__grid">
        <div class="info__item">
          <div class="info__icon">
            <Icon name="calendar" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.date')}</span>
            <span class="info__value">{edition.date}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <Icon name="map-pin" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.venue')}</span>
            <span class="info__value">{edition.venue}</span>
          </div>
        </div>
        <div class="info__item">
          <div class="info__icon">
            <Icon name="music" size={24} />
          </div>
          <div class="info__content">
            <span class="info__label">{t('citadao.tunas')}</span>
            <span class="info__value">{edition.tunas.length} {t('citadao.tunasCount')}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Tunas with Awards Section -->
  {tunasWithPrizes.length > 0 && (
    <section class="results">
      <div class="container">
        <h2 class="section-title">{t('citadao.awards')}</h2>
        <div class="results__list">
          {tunasWithPrizes.map(({ tuna, awards }) => (
            <TunaCard
              tuna={tuna}
              variant="result"
              awards={awards}
              awardLabel={(key) => t(`awards.${key}`)}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Tunas without Awards Section -->
  {tunasWithoutPrizes.length > 0 && (
    <section class="participants">
      <div class="container">
        <h2 class="section-title">{t('citadao.participants')}</h2>
        <div class="participants__grid">
          {tunasWithoutPrizes.map(({ tuna }) => (
            <TunaCard tuna={tuna} variant="participant" />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Guests Section -->
  {edition.guests.length > 0 && (
    <section class="guests">
      <div class="container">
        <h2 class="section-title">{t('citadao.guests')}</h2>
        <div class="guests__list">
          {edition.guests.map((guest) => (
            <TunaCard tuna={guest} variant="guest" />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <section class="navigation">
    <div class="container">
      <div class="navigation__buttons">
        {
          prevYear && (
            <Button href={l(`/citadao/${prevYear}`)} variant="outline">
              ← CITADÃO {prevYear}
            </Button>
          )
        }
        <Button href={l('/citadao')} variant="secondary">
          {t('citadao.allEditions')}
        </Button>
        {
          nextYear && (
            <Button href={l(`/citadao/${nextYear}`)} variant="outline">
              CITADÃO {nextYear} →
            </Button>
          )
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    text-align: center;
  }

  .hero__breadcrumb { margin-bottom: var(--space-4); }
  .hero__breadcrumb a {
    color: var(--color-text-inverted); opacity: 0.8;
    text-decoration: none; font-size: var(--text-sm);
    transition: opacity var(--transition-fast);
  }
  .hero__breadcrumb a:hover { opacity: 1; }

  .hero__badge {
    display: inline-block; background: rgba(255, 255, 255, 0.2);
    padding: var(--space-1) var(--space-3); border-radius: var(--radius-full);
    font-size: var(--text-sm); font-weight: 500; margin-bottom: var(--space-3);
  }

  .hero__title { font-size: var(--text-4xl); font-weight: 700; margin-bottom: var(--space-2); }

  .hero__notes {
    font-size: var(--text-lg); opacity: 0.9; background: var(--color-secondary);
    display: inline-block; padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-md); margin-top: var(--space-4);
  }

  /* Section Title */
  .section-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  /* Info Section */
  .info {
    padding: var(--space-8) 0;
    background-color: var(--color-surface);
  }

  .info__grid {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .info__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .info__item {
    display: flex; align-items: center; gap: var(--space-4); padding: var(--space-4);
    background-color: var(--color-background); border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .info__icon {
    display: flex; align-items: center; justify-content: center;
    width: 48px; height: 48px; flex-shrink: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-md); color: var(--color-text-inverted);
  }

  .info__content { display: flex; flex-direction: column; }
  .info__label { font-size: var(--text-sm); color: var(--color-text-muted); }
  .info__value { font-size: var(--text-lg); font-weight: 600; color: var(--color-text); }

  /* Results Section (Tunas with Awards) */
  .results {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .results__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* Participants & Guests Sections */
  .participants,
  .guests {
    padding: var(--space-12) 0;
  }

  .participants { background-color: var(--color-surface); }
  .guests { background-color: var(--color-background); }

  .participants__grid,
  .guests__list {
    display: grid;
    gap: var(--space-3);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .participants__grid,
    .guests__list { grid-template-columns: repeat(2, 1fr); }
  }

  @media (min-width: 1024px) {
    .participants__grid,
    .guests__list { grid-template-columns: repeat(3, 1fr); }
  }

  /* Navigation Section */
  .navigation {
    padding: var(--space-8) 0;
    background-color: var(--color-surface);
  }

  .navigation__buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }
</style>
