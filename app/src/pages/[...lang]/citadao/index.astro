    pointer-events: none;
  }

  .hero::after {
    content: 'ðŸŽ­';
    position: absolute;
    bottom: var(--space-4);
    right: var(--space-6);
    font-size: 2rem;
    opacity: 0.2;
    pointer-events: none;
  }

  .hero__title {
    position: relative;
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .hero__subtitle {
    position: relative;
    font-size: var(--text-xl);
    opacity: 0.9;
  }

  /* About CITADÃƒO */
  .about-citadao {
    padding: var(--space-12) 0;
    background-color: var(--color-surface);
  }

  .about-citadao__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-citadao__content h2 {
    font-size: var(--text-3xl);
