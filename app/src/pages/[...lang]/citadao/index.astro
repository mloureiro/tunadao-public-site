---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getCitadaoEditions } from '@lib/cms';
import { Icon } from '@ui/icons';
import AwardCard from '@components/AwardCard.astro';

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const _l = (path: string) => getLocalizedPath(path, currentLang);

// Fetch editions from CMS (with fallback)
const editions = await getCitadaoEditions();
const latestEdition = editions[0];
---

<Layout title={`${t('citadao.title')} | Tunadão 1998`} description={t('citadao.description')}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{t('citadao.title')}</h1>
      <p class="hero__subtitle">{t('citadao.subtitle')}</p>
    </div>
  </section>

  <!-- Latest Edition Highlight -->
  <section class="latest">
    <div class="container">
      <div class="latest__card">
        <div class="latest__badge">{latestEdition.edition}{t('citadao.edition')}</div>
        <h2 class="latest__title">CITADÃO {latestEdition.year}</h2>
        <div class="latest__info">
          <div class="latest__info-item">
            <Icon name="calendar" size={20} />
            <span>{latestEdition.date}</span>
          </div>
          <div class="latest__info-item">
            <Icon name="map-pin" size={20} />
            <span>{latestEdition.venue}</span>
          </div>
        </div>
        <Button href="#citadao-${latestEdition.year}" variant="primary" size="lg">
          {t('citadao.viewDetails')}
        </Button>
      </div>
    </div>
  </section>

  <!-- About CITADÃO Section -->
  <section class="about-citadao">
    <div class="container">
      <div class="about-citadao__content">
        <h2>{t('citadao.about.title')}</h2>
        <p set:html={t('citadao.about.p1')} />
        <p set:html={t('citadao.about.p2').replace('{count}', String(editions.length))} />
      </div>
    </div>
  </section>

  <!-- All Editions -->
  <section class="editions">
    <div class="container">
      <h2 class="section-title">{t('citadao.allEditions')}</h2>
      <div class="editions__list">
        {
          editions.map((edition) => (
            <article class="edition-item" id={`citadao-${edition.year}`}>
              <div class="edition-item__header">
                <div class="edition-item__title">
                  <span class="edition-item__number">
                    {edition.edition}
                    {t('citadao.edition')}
                  </span>
                  <h3>CITADÃO {edition.year}</h3>
                </div>
                <div class="edition-item__meta">
                  <span class="edition-item__date">{edition.date}</span>
                  <span class="edition-item__venue">{edition.venue}</span>
                </div>
                {edition.notes && <span class="edition-item__badge">{edition.notes}</span>}
              </div>

              <div class="edition-item__content">
                {/* Tunas Participantes */}
                <div class="edition-item__section">
                  <h4>{t('citadao.participatingTunas')}</h4>
                  <ul class="edition-item__tunas">
                    {edition.tunas.map((tuna) => (
                      <li>{tuna}</li>
                    ))}
                  </ul>
                </div>

                {/* Convidados */}
                {edition.guests && edition.guests.length > 0 && (
                  <div class="edition-item__section">
                    <h4>{t('citadao.guests')}</h4>
                    <ul class="edition-item__guests">
                      {edition.guests.map((guest) => (
                        <li>{guest}</li>
                      ))}
                    </ul>
                  </div>
                )}

                {/* Prémios */}
                {edition.awards && Object.keys(edition.awards).length > 0 && (
                  <div class="edition-item__section edition-item__awards">
                    <h4>{t('citadao.awards')}</h4>
                    <div class="awards-grid">
                      {Object.entries(edition.awards).map(([key, winner]) => (
                        <AwardCard
                          awardKey={key}
                          name={t(`awards.${key}`)}
                          winner={winner as string}
                        />
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    padding-bottom: calc(
      var(--space-12) + 4rem
    ); /* Extra padding to compensate for .latest negative margin */
    text-align: center;
  }

  .hero__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    opacity: 0.9;
  }

  /* Latest Edition */
  .latest {
    padding: var(--space-8) 0;
    background-color: var(--color-background);
    margin-top: -4rem;
    position: relative;
    z-index: 1;
  }

  .latest__card {
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: var(--shadow-lg);
  }

  .latest__badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .latest__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .latest__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 480px) {
    .latest__info {
      flex-direction: row;
      justify-content: center;
      gap: var(--space-6);
    }
  }

  .latest__info-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: var(--color-text-muted);
  }

  .latest__info-item svg {
    color: var(--color-primary);
  }

  /* About CITADÃO */
  .about-citadao {
    padding: var(--space-12) 0;
    background-color: var(--color-surface);
  }

  .about-citadao__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-citadao__content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  .about-citadao__content p {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .about-citadao__content p:last-child {
    margin-bottom: 0;
  }

  /* Section Title */
  .section-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-8);
    color: var(--color-text);
    text-align: center;
  }

  /* Editions List */
  .editions {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .editions__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 1000px;
    margin: 0 auto;
  }

  .edition-item {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .edition-item__header {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-text-inverted);
    padding: var(--space-5);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-4);
  }

  .edition-item__title {
    flex: 1;
    min-width: 200px;
  }

  .edition-item__number {
    display: block;
    font-size: var(--text-sm);
    opacity: 0.85;
    margin-bottom: var(--space-1);
  }

  .edition-item__title h3 {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin: 0;
  }

  .edition-item__meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    text-align: right;
    font-size: var(--text-sm);
    opacity: 0.9;
  }

  .edition-item__badge {
    background-color: var(--color-secondary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .edition-item__content {
    padding: var(--space-5);
    display: grid;
    gap: var(--space-5);
  }

  @media (min-width: 768px) {
    .edition-item__content {
      grid-template-columns: 1fr 1fr;
    }

    .edition-item__awards {
      grid-column: 1 / -1;
    }
  }

  .edition-item__section h4 {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
  }

  .edition-item__tunas,
  .edition-item__guests {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .edition-item__tunas li,
  .edition-item__guests li {
    padding: var(--space-1) 0;
    border-bottom: 1px solid var(--color-border-light);
  }

  .edition-item__tunas li:last-child,
  .edition-item__guests li:last-child {
    border-bottom: none;
  }

  .awards-grid {
    display: grid;
    gap: var(--space-3);
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  }
</style>
