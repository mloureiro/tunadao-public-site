    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-8);
    color: var(--color-text);
    text-align: center;
  }

  /* Editions List */
  .editions {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .editions__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 1000px;
