---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';

export function getStaticPaths() {
  return [
    { params: { lang: undefined } }, // / (PT - default)
    { params: { lang: 'en' } }, // /en/
  ];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

const stats = [
  { value: '1998', label: t('stats.founded') },
  { value: '25+', label: t('stats.yearsHistory') },
  { value: '60+', label: t('stats.members') },
  { value: '19', label: t('stats.citadaoEditions') },
];

const highlights = [
  {
    title: t('home.sections.citadao'),
    description: t('highlights.citadaoDesc'),
    href: l('/citadao'),
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>`,
  },
  {
    title: t('home.sections.palmares'),
    description: t('highlights.palmaresDesc'),
    href: l('/palmares'),
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>`,
  },
  {
    title: t('home.sections.about'),
    description: t('highlights.aboutDesc'),
    href: l('/sobre'),
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
  },
];
---

<Layout title={`Tunadão 1998 - ${t('home.subtitle')}`}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__background"></div>
    <div class="hero__content container">
      <h1 class="hero__title">{t('home.title')}</h1>
      <p class="hero__subtitle">{t('home.subtitle')}</p>
      <p class="hero__text">{t('home.heroText')}</p>
      <div class="hero__actions">
        <Button href={l('/sobre')} variant="primary" size="lg">
          {t('home.cta.about')}
        </Button>
        <Button href={l('/citadao')} variant="outline" size="lg">
          {t('home.cta.citadao')}
        </Button>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats">
    <div class="container">
      <div class="stats__grid">
        {
          stats.map((stat) => (
            <div class="stats__item">
              <span class="stats__value">{stat.value}</span>
              <span class="stats__label">{stat.label}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Highlights Section -->
  <section class="highlights">
    <div class="container">
      <div class="highlights__grid">
        {
          highlights.map((item) => (
            <a href={item.href} class="highlight-card">
              <div class="highlight-card__icon">
                <Fragment set:html={item.icon} />
              </div>
              <h3 class="highlight-card__title">{item.title}</h3>
              <p class="highlight-card__description">{item.description}</p>
              <span class="highlight-card__link">{t('common.readMore')} →</span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="about-preview">
    <div class="container">
      <div class="about-preview__content">
        <h2 class="about-preview__title">{t('about.history')}</h2>
        <p class="about-preview__text">{t('aboutPreview.text1')}</p>
        <p class="about-preview__text">{t('aboutPreview.text2')}</p>
        <Button href={l('/sobre')} variant="secondary">
          {t('home.cta.about')}
        </Button>
      </div>
    </div>
  </section>

  <!-- Music CTA Section -->
  <section class="music-cta">
    <div class="container">
      <div class="music-cta__content">
        <h2 class="music-cta__title">{t('music.title')}</h2>
        <p class="music-cta__text">{t('musicCta.text')}</p>
        <Button
          href="https://open.spotify.com/artist/7HeYIxlV5Nb1KvZkBx00sH"
          variant="primary"
          size="lg"
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="currentColor"
            style="margin-right: 0.5rem;"
          >
            <path
              d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"
            ></path>
          </svg>
          {t('music.listenOn')}
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    inset: 0;
    background-image: url('/images/hero-bg.jpg');
    background-size: cover;
    background-position: center 30%;
    z-index: -1;
  }

  .hero__background::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse 80% 70% at center,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.5) 40%,
      rgba(0, 0, 0, 0.75) 70%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }

  .hero__background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(46, 26, 71, 0.4) 0%,
      rgba(139, 0, 41, 0.2) 50%,
      rgba(46, 26, 71, 0.5) 100%
    );
  }

  .hero__content {
    text-align: center;
    color: var(--color-text-inverted);
    padding: var(--space-8) var(--space-4);
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    margin-bottom: var(--space-2);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .hero__subtitle {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    opacity: 0.9;
    margin-bottom: var(--space-4);
  }

  .hero__text {
    font-size: var(--text-lg);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto var(--space-6);
  }

  .hero__actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Stats Section */
  .stats {
    background-color: var(--color-surface);
    padding: var(--space-8) 0;
    margin-top: -4rem;
    position: relative;
    z-index: 1;
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  }

  .stats__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .stats__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stats__item {
    text-align: center;
  }

  .stats__value {
    display: block;
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }

  .stats__label {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-1);
  }

  /* Highlights Section */
  .highlights {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .highlights__grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .highlights__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .highlight-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition:
      transform var(--transition-normal),
      box-shadow var(--transition-normal);
    border: 1px solid var(--color-border);
  }

  .highlight-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .highlight-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: var(--radius-lg);
    color: var(--color-text-inverted);
    margin-bottom: var(--space-4);
  }

  .highlight-card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .highlight-card__description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    flex-grow: 1;
    margin-bottom: var(--space-4);
  }

  .highlight-card__link {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }

  .highlight-card:hover .highlight-card__link {
    color: var(--color-primary-dark);
  }

  /* About Preview Section */
  .about-preview {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-background) 100%);
  }

  .about-preview__content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-preview__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  .about-preview__text {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.8;
    margin-bottom: var(--space-4);
  }

  .about-preview__text:last-of-type {
    margin-bottom: var(--space-6);
  }

  /* Music CTA Section */
  .music-cta {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
  }

  .music-cta__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .music-cta__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
  }

  .music-cta__text {
    font-size: var(--text-lg);
    opacity: 0.9;
    margin-bottom: var(--space-6);
  }
</style>
