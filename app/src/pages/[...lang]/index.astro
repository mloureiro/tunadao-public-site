---
import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import Button from '@components/Button.astro';
import Icon from '@ui/icons/Icon.astro';
import SectionDivider from '@components/SectionDivider.astro';
import ScrollIndicator from '@components/ScrollIndicator.astro';
import StatsBar from '@components/home/StatsBar.astro';
import SectionPreview from '@components/home/SectionPreview.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getCitadaoEditions, getPalmaresYears, getAlbums, getSocialLinks } from '@lib/cms';

// Photos
import heroPhoto from '@assets/photos/palco-bandeira-25anos.jpg';
import groupPhoto from '@assets/photos/grupo-principal.jpg';
import placaPhoto from '@assets/photos/placa-25-anos.jpg';
import pandeiretaPhoto from '@assets/photos/pandeireta-closeup.jpg';

export function getStaticPaths() {
  return [
    { params: { lang: undefined } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

// CMS data
const [citadaoEditions, palmaresYears, albums, socialLinks] = await Promise.all([
  getCitadaoEditions(),
  getPalmaresYears(),
  getAlbums(),
  getSocialLinks(),
]);

// Compute stats
const currentYear = new Date().getFullYear();
const totalFestivals = palmaresYears.reduce((sum, y) => sum + y.festivals.length, 0);
const totalAwards = palmaresYears.reduce(
  (sum, y) => sum + y.festivals.reduce((fs, f) => fs + f.awards.length, 0),
  0
);
const bestTunaCount = palmaresYears.reduce(
  (sum, y) =>
    sum +
    y.festivals.reduce(
      (fs, f) => fs + f.awards.filter((a) => a.slug === 'melhor-tuna').length,
      0
    ),
  0
);

const stats = [
  { value: '1998', label: t('home.stats.founded') },
  { value: `${currentYear - 1998}+`, label: t('home.stats.yearsHistory') },
  { value: String(citadaoEditions.length), label: t('home.stats.citadaoEditions') },
  { value: `${totalFestivals}+`, label: t('home.stats.festivals') },
  { value: `${totalAwards}+`, label: t('home.stats.awards') },
];

// Latest Citadao edition
const latestEdition = citadaoEditions[0];
const latestEditionYear = latestEdition ? latestEdition.year : null;
const latestEditionPosterUrl = latestEdition?.posterUrl || null;
---

<Layout title={`TunadÃ£o 1998 - ${t('home.subtitle')}`}>
  <!-- Hero Section -->
  <section class="hero" aria-label={t('home.title')}>
    <div class="hero__image">
      <Image
        src={heroPhoto}
        alt={t('home.hero.heroAlt')}
        widths={[640, 1024, 1920, 2560]}
        sizes="100vw"
        loading="eager"
      />
      <div class="hero__overlay"></div>
    </div>

    <div class="hero__content container">
      <h1 class="hero__title animate-fade-in">{t('home.title')}</h1>
      <p class="hero__subtitle animate-fade-in-delay-1">{t('home.subtitle')}</p>
      <p class="hero__text animate-fade-in-delay-2">{t('home.heroText')}</p>
    </div>

    <ScrollIndicator />
  </section>

  <!-- Stats Bar -->
  <StatsBar stats={stats} ariaLabel={t('home.stats.ariaLabel')} />

  <!-- About Preview Section -->
  <SectionPreview id="sobre-preview" accentColor="purple" imagePosition="right" showGoldFrame>
    <SectionDivider slot="divider" label={t('home.sections.aboutPreview.badge')} color="gold" />
    <h2 slot="title">{t('home.sections.aboutPreview.title')}</h2>
    <div slot="content" class="prose">
      <p>{t('home.sections.aboutPreview.text1')}</p>
      <p>{t('home.sections.aboutPreview.text2')}</p>
    </div>
    <Button slot="cta" href={l('/sobre')} variant="primary">
      {t('home.sections.aboutPreview.cta')}
    </Button>
    <Image
      slot="image"
      src={groupPhoto}
      alt={t('home.sections.aboutPreview.imageAlt')}
      widths={[400, 600, 800]}
      sizes="(max-width: 1024px) 100vw, 50vw"
    />
  </SectionPreview>

  <!-- Citadao Preview Section -->
  <SectionPreview id="citadao-preview" accentColor="red" background="gradient" imagePosition="left">
    <SectionDivider
      slot="divider"
      label={t('home.sections.citadaoPreview.badge')}
      color="gold"
    />
    <h2 slot="title">{t('home.sections.citadaoPreview.title')}</h2>
    <div slot="content">
      <p>{t('home.sections.citadaoPreview.description')}</p>
      <!-- Inline edition stats if available -->
      {
        latestEdition && (
          <div class="edition-stats">
            <div class="edition-stat">
              <span class="edition-stat__value">{latestEdition.edition}</span>
              <span class="edition-stat__label">
                {t('home.sections.citadaoPreview.editionsLabel')}
              </span>
            </div>
            <div class="edition-stats__divider" />
            <div class="edition-stat">
              <span class="edition-stat__value">{latestEditionYear}</span>
              <span class="edition-stat__label">
                {t('home.sections.citadaoPreview.latestEditionLabel')}
              </span>
            </div>
          </div>
        )
      }
    </div>
    <Button slot="cta" href={l('/citadao')} variant="red">
      {t('home.sections.citadaoPreview.cta')}
      <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </Button>
    <!-- Poster or placeholder in image slot -->
    <Fragment slot="image">
      {
        latestEditionPosterUrl ? (
          <img
            src={latestEditionPosterUrl}
            alt={`CITADAO ${latestEditionYear} - ${t('home.sections.citadaoPreview.posterAlt')}`}
            loading="lazy"
            style="aspect-ratio: 3/2; object-fit: cover; width: 100%;"
          />
        ) : (
          <div class="citadao-placeholder">
            <svg class="citadao-placeholder__icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            <p class="citadao-placeholder__title">CITADAO</p>
            <p class="citadao-placeholder__text">{t('home.sections.citadaoPreview.placeholderText')}</p>
          </div>
        )
      }
    </Fragment>
  </SectionPreview>

  <!-- Palmares Preview Section -->
  <SectionPreview id="palmares-preview" accentColor="gold" imagePosition="right" showGoldFrame>
    <SectionDivider
      slot="divider"
      label={t('home.sections.palmaresPreview.badge')}
      color="gold"
    />
    <h2 slot="title">{t('home.sections.palmaresPreview.title')}</h2>
    <div slot="content">
      <p>{t('home.sections.palmaresPreview.description')}</p>
      <!-- Achievement mini stats -->
      <div class="achievement-stats">
        <div class="achievement-stat">
          <span class="achievement-stat__value">{totalAwards}</span>
          <span class="achievement-stat__label">
            {t('home.sections.palmaresPreview.awardsLabel')}
          </span>
        </div>
        <div class="achievement-stat">
          <span class="achievement-stat__value">{totalFestivals}</span>
          <span class="achievement-stat__label">
            {t('home.sections.palmaresPreview.festivalsLabel')}
          </span>
        </div>
        <div class="achievement-stat">
          <span class="achievement-stat__value">{bestTunaCount}</span>
          <span class="achievement-stat__label">
            {t('home.sections.palmaresPreview.bestTunaLabel')}
          </span>
        </div>
      </div>
    </div>
    <Button slot="cta" href={l('/palmares')} variant="gold">
      {t('home.sections.palmaresPreview.cta')}
    </Button>
    <Image
      slot="image"
      src={placaPhoto}
      alt={t('home.sections.palmaresPreview.imageAlt')}
      widths={[400, 600, 800]}
      sizes="(max-width: 1024px) 100vw, 50vw"
    />
  </SectionPreview>

  <!-- Music CTA Section -->
  <SectionPreview id="music-cta" accentColor="white" background="dark" imagePosition="left">
    <SectionDivider slot="divider" label={t('home.sections.musicCta.badge')} color="gold" />
    <h2 slot="title">{t('home.sections.musicCta.title')}</h2>
    <div slot="content">
      <p>{t('home.sections.musicCta.text')}</p>
      {
        albums.length > 0 && (
          <div class="albums-count">
            <span class="albums-count__value">{albums.length}</span>
            <span class="albums-count__label">{t('home.sections.musicCta.albumsLabel')}</span>
          </div>
        )
      }
    </div>
    {
      socialLinks.spotify && (
        <Button slot="cta" href={socialLinks.spotify} variant="white" target="_blank">
          <Icon name="spotify" size={20} />
          {t('home.sections.musicCta.cta')}
        </Button>
      )
    }
    <Image
      slot="image"
      src={pandeiretaPhoto}
      alt={t('home.sections.musicCta.imageAlt')}
      widths={[400, 600, 800]}
      sizes="(max-width: 1024px) 100vw, 50vw"
    />
  </SectionPreview>
</Layout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: calc(100vh - var(--header-height));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero__image {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero__image :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.6),
      rgba(0, 0, 0, 0.7)
    );
  }

  .hero__content {
    position: relative;
    text-align: center;
    color: #ffffff;
    padding: var(--space-8) 0;
  }

  .hero__title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: var(--font-weight-black);
    margin-bottom: var(--space-4);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .hero__subtitle {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent-gold);
    opacity: 0.95;
    margin-bottom: var(--space-4);
  }

  .hero__text {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    max-width: 700px;
    margin: 0 auto;
    line-height: var(--line-height-relaxed);
  }

  /* Edition Stats (Citadao section) */
  .edition-stats {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: var(--space-6);
  }

  .edition-stat {
    text-align: center;
  }

  .edition-stat__value {
    display: block;
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-black);
    color: var(--color-secondary);
    line-height: 1;
    margin-bottom: var(--space-1);
  }

  .edition-stat__label {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .edition-stats__divider {
    width: 1px;
    height: 2.5rem;
    background-color: var(--color-text-secondary);
    opacity: 0.3;
  }

  /* Achievement Stats (Palmares section) */
  .achievement-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-top: var(--space-6);
  }

  .achievement-stat {
    text-align: center;
  }

  .achievement-stat__value {
    display: block;
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-black);
    color: var(--color-accent-gold);
    line-height: 1;
    margin-bottom: var(--space-1);
  }

  .achievement-stat__label {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Albums Count (Music section) */
  .albums-count {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
    padding: var(--space-3) var(--space-4);
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .albums-count__value {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-black);
    color: var(--color-accent-gold);
  }

  .albums-count__label {
    font-size: var(--font-size-sm);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  /* Citadao Placeholder */
  .citadao-placeholder {
    aspect-ratio: 3 / 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-secondary), var(--color-primary));
    color: #ffffff;
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    text-align: center;
    box-shadow: var(--shadow-2xl);
  }

  .citadao-placeholder__icon {
    width: 6rem;
    height: 6rem;
    margin-bottom: var(--space-4);
    opacity: 0.8;
  }

  .citadao-placeholder__title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-black);
    margin-bottom: var(--space-2);
  }

  .citadao-placeholder__text {
    font-size: var(--font-size-sm);
    opacity: 0.8;
  }
</style>
