---
import Layout from '@layouts/Layout.astro';
import Button from '@components/Button.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getBlogPostSlugs, getBlogPostBySlug } from '@lib/cms';

export async function getStaticPaths() {
  const languages: (string | undefined)[] = [undefined, 'en'];
  const paths: { params: { lang: string | undefined; slug: string } }[] = [];

  // Fetch all post slugs from CMS (with fallback)
  const slugs = await getBlogPostSlugs();

  for (const lang of languages) {
    for (const slug of slugs) {
      paths.push({ params: { lang, slug } });
    }
  }

  return paths;
}

const { lang, slug } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

// Fetch the specific post from CMS (with fallback)
const post = await getBlogPostBySlug(slug as string);

if (!post) {
  return Astro.redirect(l('/blog'));
}

function formatDate(dateStr: string): string {
  const locale = currentLang === 'en' ? 'en-GB' : 'pt-PT';
  const date = new Date(dateStr);
  return date.toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title={`${post.title} | Blog | Tunadão 1998`} description={post.excerpt}>
  <article class="blog-post">
    <!-- Header -->
    <header class="blog-post__header">
      <div class="container">
        <div class="blog-post__meta">
          <span class="blog-post__category">{post.category}</span>
          <time datetime={post.date}>{formatDate(post.date)}</time>
          <span class="blog-post__reading-time">{post.readingTime} {t('blog.readingTime')}</span>
        </div>
        <h1 class="blog-post__title">{post.title}</h1>
        <p class="blog-post__excerpt">{post.excerpt}</p>
      </div>
    </header>

    <!-- Content -->
    <div class="blog-post__content">
      <div class="container container--narrow">
        <div class="blog-post__body" set:html={post.content} />

        <div class="blog-post__footer">
          <Button href={l('/blog')} variant="outline">
            ← {t('blog.backToBlog')}
          </Button>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post__header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    text-align: center;
  }

  .blog-post__meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    flex-wrap: wrap;
    font-size: var(--text-sm);
    opacity: 0.9;
  }

  .blog-post__category {
    background-color: rgba(255, 255, 255, 0.2);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-weight: 500;
  }

  .blog-post__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-4);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-post__excerpt {
    font-size: var(--text-xl);
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .blog-post__content {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .container--narrow {
    max-width: 750px;
  }

  .blog-post__body {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-text);
  }

  .blog-post__body :global(h2) {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    color: var(--color-text);
  }

  .blog-post__body :global(p) {
    margin-bottom: var(--space-4);
    color: var(--color-text-muted);
  }

  .blog-post__body :global(ul),
  .blog-post__body :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
    color: var(--color-text-muted);
  }

  .blog-post__body :global(li) {
    margin-bottom: var(--space-2);
  }

  .blog-post__body :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .blog-post__footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }
</style>
