---
import Layout from '@layouts/Layout.astro';
import HeroSection from '@components/HeroSection.astro';
import CategoryFilter from '@components/CategoryFilter.astro';
import PostCard from '@components/blog/PostCard.astro';
import { useTranslations, getLocalizedPath, type Language, defaultLang } from '@i18n/index';
import { getBlogPosts } from '@lib/cms';

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);
const l = (path: string) => getLocalizedPath(path, currentLang);

// Fetch posts from CMS (with fallback)
const posts = await getBlogPosts();

const categories = [
  { key: 'all', label: t('blog.categories.all') },
  { key: 'news', label: t('blog.categories.news') },
  { key: 'events', label: t('blog.categories.events') },
  { key: 'awards', label: t('blog.categories.awards') },
];

function formatDate(dateStr: string): string {
  const locale = currentLang === 'en' ? 'en-GB' : 'pt-PT';
  const date = new Date(dateStr);
  return date.toLocaleDateString(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout title={`${t('blog.title')} | TunadÃ£o 1998`} description={t('blog.description')}>
  <HeroSection title={t('blog.title')} subtitle={t('blog.subtitle')} />

  <CategoryFilter
    categories={categories}
    itemSelector=".post-card"
    categoryAttribute=".post-card__category"
    ariaLabel={t('blog.filterByCategory') || 'Filter by category'}
  />

  <section class="posts">
    <div class="container">
      <div class="posts__grid">
        {
          posts.map((post) => (
            <PostCard
              post={post}
              href={l(`/blog/${post.slug}`)}
              readingTimeLabel={t('blog.readingTime')}
              formatDate={formatDate}
            />
          ))
        }
      </div>

      {
        posts.length === 0 && (
          <div class="posts__empty">
            <p>{t('common.noResults')}</p>
          </div>
        )
      }
    </div>
  </section>
</Layout>

<style>
  /* Posts Grid */
  .posts {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .posts__grid {
    display: grid;
    gap: var(--space-6);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 768px) {
    .posts__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .posts__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .posts__empty {
    text-align: center;
    padding: var(--space-12) 0;
    color: var(--color-text-muted);
  }
</style>
