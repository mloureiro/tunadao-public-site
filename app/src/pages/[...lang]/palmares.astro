---
import Layout from '@layouts/Layout.astro';
import { useTranslations, type Language, defaultLang } from '@i18n/index';
import { getPalmaresYears } from '@lib/cms';
import Lightbox from '@components/Lightbox.astro';
import FestivalCard from '@components/palmares/FestivalCard.astro';
import YearNavigation from '@components/YearNavigation.astro';
import VerticalTimeline from '@components/VerticalTimeline.astro';
import HeroSection from '@components/HeroSection.astro';
import PalmaresStatsBar from '@components/palmares/PalmaresStatsBar.astro';
import SectionDivider from '@components/SectionDivider.astro';

// Feature flag for new timeline (default: true)
const useVerticalTimeline = import.meta.env.PUBLIC_USE_VERTICAL_TIMELINE !== 'false';

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);

// Fetch Palmarés data from CMS (with fallback)
const palmaresData = await getPalmaresYears();

// Get list of all years for navigation
const allYears = palmaresData.map((yearData) => yearData.year);

// Calculate statistics
const totalAwards = palmaresData.reduce((total, year) => {
  return total + year.festivals.reduce((festTotal, fest) => festTotal + fest.awards.length, 0);
}, 0);

const totalFestivals = palmaresData.reduce((total, year) => total + year.festivals.length, 0);

const melhorTunaCount = palmaresData.reduce((total, year) => {
  return (
    total +
    year.festivals.reduce((festTotal, fest) => {
      return festTotal + fest.awards.filter((a) => a.slug === 'melhor-tuna').length;
    }, 0)
  );
}, 0);

// Calculate years since first award
const firstAwardYear = palmaresData.length > 0
  ? Math.min(...palmaresData.map(y => y.year))
  : new Date().getFullYear();
const yearsSinceFirst = new Date().getFullYear() - firstAwardYear;

// Build stats array for PalmaresStatsBar
const stats = [
  { value: `${totalAwards}+`, label: t('palmares.stats.awards') },
  { value: totalFestivals, label: t('palmares.stats.festivals') },
  { value: melhorTunaCount, label: t('palmares.stats.bestTuna') },
  { value: `${yearsSinceFirst}+`, label: t('palmares.stats.yearsOfAwards') },
];
---

<Layout title={`${t('palmares.title')} | Tunadão 1998`} description={t('palmares.description')}>
  <HeroSection
    title={t('palmares.title')}
    subtitle={t('palmares.subtitle')}
  />

  <PalmaresStatsBar stats={stats} />

  <!-- Year Navigation -->
  {useVerticalTimeline ? (
    <VerticalTimeline years={allYears} ariaLabel={t('palmares.jumpToYear') || 'Jump to year'} />
  ) : (
    <YearNavigation years={allYears} ariaLabel={t('palmares.jumpToYear') || 'Jump to year'} />
  )}

  <!-- Timeline Section -->
  <section class="palmares-timeline">
    <div class="container">
      {
        palmaresData.map((yearData) => (
          <div class="year-section" id={`year-${yearData.year}`}>
            <SectionDivider label={String(yearData.year)} color="gold" centered />
            <div class="festivals-list">
              {yearData.festivals.map((festival) => (
                <FestivalCard
                  festival={festival}
                  organizerLabel={t('palmares.festival')}
                />
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <Lightbox closeLabel={t('common.close')} />
</Layout>


<style>
  /* Palmares Timeline */
  .palmares-timeline {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  /* Year Sections */
  .year-section {
    margin-bottom: var(--space-12);
    scroll-margin-top: 80px; /* Offset for sticky nav */
  }

  .year-section:last-child {
    margin-bottom: 0;
  }

  /* Festival List - Single column, stacked vertically */
  .festivals-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    margin-top: var(--space-6);
  }
</style>
