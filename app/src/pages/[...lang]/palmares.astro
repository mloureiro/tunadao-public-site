---
import Layout from '@layouts/Layout.astro';
import { useTranslations, type Language, defaultLang } from '@i18n/index';
import { getPalmaresYears } from '@lib/cms';
import { Icon } from '@ui/icons';
import Award from '@components/Award.astro';
import type { FrontendPalmaresAward } from '@lib/cms/types';

// Award priority for sorting (lower = more important)
const AWARD_PRIORITY: Record<string, number> = {
  'melhor-tuna': 1,
  'tuna-mais-tuna': 2,
  'tuna-do-publico': 3,
  'segunda-melhor-tuna': 4,
  'terceira-melhor-tuna': 5,
};

function sortAwards(awards: FrontendPalmaresAward[]): FrontendPalmaresAward[] {
  return [...awards].sort((a, b) => {
    const aPriority = AWARD_PRIORITY[a.slug] ?? 100;
    const bPriority = AWARD_PRIORITY[b.slug] ?? 100;
    if (aPriority !== bPriority) {
      return aPriority - bPriority;
    }
    // Same priority: sort alphabetically by name
    return a.name.localeCompare(b.name, 'pt');
  });
}

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);

// Fetch Palmarés data from CMS (with fallback)
const palmaresData = await getPalmaresYears();

// Calculate statistics
const totalAwards = palmaresData.reduce((total, year) => {
  return total + year.festivals.reduce((festTotal, fest) => festTotal + fest.awards.length, 0);
}, 0);

const totalFestivals = palmaresData.reduce((total, year) => total + year.festivals.length, 0);

const melhorTunaCount = palmaresData.reduce((total, year) => {
  return (
    total +
    year.festivals.reduce((festTotal, fest) => {
      return festTotal + fest.awards.filter((a) => a.slug === 'melhor-tuna').length;
    }, 0)
  );
}, 0);
---

<Layout title={`${t('palmares.title')} | Tunadão 1998`} description={t('palmares.description')}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{t('palmares.title')}</h1>
      <p class="hero__subtitle">{t('palmares.subtitle')}</p>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats">
    <div class="container">
      <div class="stats__grid">
        <div class="stats__item">
          <span class="stats__value">{totalAwards}+</span>
          <span class="stats__label">{t('palmares.stats.awards')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{totalFestivals}</span>
          <span class="stats__label">{t('palmares.stats.festivals')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{melhorTunaCount}</span>
          <span class="stats__label">{t('palmares.stats.bestTuna')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{palmaresData.length}</span>
          <span class="stats__label">{t('palmares.stats.yearsOfAwards')}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="palmares-timeline">
    <div class="container">
      {
        palmaresData.map((yearData) => (
          <div class="year-section" id={`year-${yearData.year}`}>
            <div class="year-header">
              <h2 class="year-title">{yearData.year}</h2>
              <span class="year-count">
                {yearData.festivals.reduce((total, f) => total + f.awards.length, 0)}{' '}
                {t('palmares.awardsCount')}
              </span>
            </div>
            <div class="festivals-grid">
              {yearData.festivals.map((festival) => {
                const sortedAwards = sortAwards(festival.awards);
                const topAward = sortedAwards[0];
                const otherAwards = sortedAwards.slice(1);
                const hasTopPrize = topAward && ['melhor-tuna', 'tuna-mais-tuna', 'tuna-do-publico'].includes(topAward.slug);

                return (
                  <article class:list={['festival-card', { 'festival-card--featured': hasTopPrize }]}>
                    {/* Poster Section */}
                    <div class="festival-card__poster">
                      {festival.posterUrl ? (
                        <img
                          src={festival.posterUrl}
                          alt={`Cartaz ${festival.name}`}
                          class="festival-card__poster-image"
                          loading="lazy"
                        />
                      ) : (
                        <div class="festival-card__poster-placeholder">
                          <Icon name="image" size={24} />
                          <span class="festival-card__poster-label">Sem cartaz</span>
                        </div>
                      )}
                      {hasTopPrize && (
                        <div class="festival-card__badge">
                          <Award awardKey={topAward.slug} size="sm">{topAward.name}</Award>
                        </div>
                      )}
                    </div>

                    {/* Content Section */}
                    <div class="festival-card__content">
                      <header class="festival-card__header">
                        <h3 class="festival-card__name">{festival.name}</h3>
                        {festival.location && (
                          <p class="festival-card__location">
                            <Icon name="map-pin" size={14} />
                            <span>{festival.location}</span>
                          </p>
                        )}
                      </header>

                      {/* Organizer */}
                      {festival.organizingTuna && (
                        <div class="festival-card__organizer">
                          <div class="festival-card__organizer-avatar">
                            {festival.organizingTuna.logoUrl ? (
                              <img
                                src={festival.organizingTuna.logoUrl}
                                alt={festival.organizingTuna.shortName}
                                loading="lazy"
                              />
                            ) : (
                              <span class="festival-card__organizer-initial">
                                {festival.organizingTuna.shortName.charAt(0)}
                              </span>
                            )}
                          </div>
                          <div class="festival-card__organizer-info">
                            <span class="festival-card__organizer-label">Organização</span>
                            {festival.organizingTuna.website ? (
                              <a
                                href={festival.organizingTuna.website}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="festival-card__organizer-name"
                                title={festival.organizingTuna.fullName}
                              >
                                {festival.organizingTuna.shortName}
                              </a>
                            ) : (
                              <span class="festival-card__organizer-name" title={festival.organizingTuna.fullName}>
                                {festival.organizingTuna.shortName}
                              </span>
                            )}
                          </div>
                        </div>
                      )}

                      {/* Awards */}
                      <footer class="festival-card__awards">
                        {(hasTopPrize ? otherAwards : sortedAwards).map((award) => (
                          <Award awardKey={award.slug} size="sm">{award.name}</Award>
                        ))}
                      </footer>
                    </div>
                  </article>
                );
              })}
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverted);
    padding: var(--space-12) 0;
    text-align: center;
  }

  .hero__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    opacity: 0.9;
  }

  /* Stats Section */
  .stats {
    background-color: var(--color-surface);
    padding: var(--space-8) 0;
    margin-top: -2rem;
    position: relative;
    z-index: 1;
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  }

  .stats__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .stats__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stats__item {
    text-align: center;
  }

  .stats__value {
    display: block;
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1;
  }

  .stats__label {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-1);
  }

  /* Palmares Timeline */
  .palmares-timeline {
    padding: var(--space-12) 0;
    background-color: var(--color-background);
  }

  .year-section {
    margin-bottom: var(--space-10);
  }

  .year-section:last-child {
    margin-bottom: 0;
  }

  .year-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-primary);
  }

  .year-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary);
  }

  .year-count {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    background-color: var(--color-surface);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
  }

  .festivals-grid {
    display: grid;
    gap: var(--space-5);
    grid-template-columns: repeat(1, 1fr);
  }

  @media (min-width: 640px) {
    .festivals-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .festivals-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Festival Card */
  .festival-card {
    background-color: var(--color-surface);
    border-radius: var(--radius-xl);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
    transition:
      transform var(--transition-base),
      box-shadow var(--transition-base),
      border-color var(--transition-base);
  }

  .festival-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-border);
  }

  .festival-card--featured {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-sm), 0 0 0 1px color-mix(in srgb, var(--color-gold) 30%, transparent);
  }

  .festival-card--featured:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--color-gold);
  }

  /* Poster Section */
  .festival-card__poster {
    position: relative;
    aspect-ratio: 3 / 4;
    background-color: var(--color-background-alt);
    overflow: hidden;
  }

  .festival-card__poster-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .festival-card:hover .festival-card__poster-image {
    transform: scale(1.05);
  }

  .festival-card__poster-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    background: linear-gradient(
      135deg,
      var(--color-neutral-100) 0%,
      var(--color-neutral-200) 100%
    );
    color: var(--color-text-muted);
  }

  [data-theme='dark'] .festival-card__poster-placeholder {
    background: linear-gradient(
      135deg,
      var(--color-surface) 0%,
      var(--color-background) 100%
    );
  }

  .festival-card__poster-label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  .festival-card__badge {
    position: absolute;
    bottom: var(--space-3);
    left: var(--space-3);
    right: var(--space-3);
  }

  /* Content Section */
  .festival-card__content {
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    flex: 1;
  }

  .festival-card__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .festival-card__name {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-text);
    line-height: var(--line-height-tight);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .festival-card__location {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .festival-card__location svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  /* Organizer Section */
  .festival-card__organizer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    margin-top: auto;
  }

  .festival-card__organizer-avatar {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    overflow: hidden;
    flex-shrink: 0;
    background-color: var(--color-surface);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border-light);
  }

  .festival-card__organizer-avatar img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 4px;
  }

  .festival-card__organizer-initial {
    font-size: var(--font-size-sm);
    font-weight: 700;
    color: var(--color-text-inverted);
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .festival-card__organizer-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .festival-card__organizer-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .festival-card__organizer-name {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  a.festival-card__organizer-name:hover {
    color: var(--color-primary);
  }

  /* Awards Section */
  .festival-card__awards {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border-light);
  }

  .festival-card__awards:empty {
    display: none;
  }
</style>
