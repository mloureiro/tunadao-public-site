import Layout from '@layouts/Layout.astro';
import { useTranslations, type Language, defaultLang } from '@i18n/index';
import { getPalmaresYears, sortAwards, isTopPrize } from '@lib/cms';
import { Icon } from '@ui/icons';
import Award from '@components/Award.astro';

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);

// Fetch Palmar√©s data from CMS (with fallback)
const palmaresData = await getPalmaresYears();

// Group years into decades for collapsible sections
interface Decade {
  label: string;
  id: string;
  years: typeof palmaresData;
  totalAwards: number;
}

function groupByDecade(years: typeof palmaresData): Decade[] {
  const decadeMap = new Map<number, typeof palmaresData>();

  for (const yearData of years) {
    const decadeStart = Math.floor(yearData.year / 10) * 10;
    const existing = decadeMap.get(decadeStart) || [];
    existing.push(yearData);
    decadeMap.set(decadeStart, existing);
  }

  // Sort decades descending (most recent first)
  const sortedDecades = Array.from(decadeMap.entries())
    .sort((a, b) => b[0] - a[0]);

  return sortedDecades.map(([decadeStart, decadeYears]) => {
    const decadeEnd = decadeStart + 9;
    const totalAwards = decadeYears.reduce((total, year) =>
      total + year.festivals.reduce((festTotal, fest) => festTotal + fest.awards.length, 0), 0);

    return {
      label: `${decadeStart}-${decadeEnd}`,
      id: `decade-${decadeStart}`,
      years: decadeYears,
      totalAwards,
    };
  });
}

const decades = groupByDecade(palmaresData);

// Calculate statistics
const totalAwards = palmaresData.reduce((total, year) => {
  return total + year.festivals.reduce((festTotal, fest) => festTotal + fest.awards.length, 0);
}, 0);

const totalFestivals = palmaresData.reduce((total, year) => total + year.festivals.length, 0);

const melhorTunaCount = palmaresData.reduce((total, year) => {
  return (
    total +
    year.festivals.reduce((festTotal, fest) => {
      return festTotal + fest.awards.filter((a) => a.slug === 'melhor-tuna').length;
    }, 0)
  );
}, 0);
