---
import Layout from '@layouts/Layout.astro';
import { useTranslations, type Language, defaultLang } from '@i18n/index';
import { getPalmaresYears } from '@lib/cms';
import { Icon } from '@ui/icons';
import Award from '@components/Award.astro';
import type { FrontendPalmaresAward } from '@lib/cms/types';

// Award priority for sorting (lower = more important)
const AWARD_PRIORITY: Record<string, number> = {
  'melhor-tuna': 1,
  'tuna-mais-tuna': 2,
  'tuna-do-publico': 3,
  'segunda-melhor-tuna': 4,
  'terceira-melhor-tuna': 5,
};

function sortAwards(awards: FrontendPalmaresAward[]): FrontendPalmaresAward[] {
  return [...awards].sort((a, b) => {
    const aPriority = AWARD_PRIORITY[a.slug] ?? 100;
    const bPriority = AWARD_PRIORITY[b.slug] ?? 100;
    if (aPriority !== bPriority) {
      return aPriority - bPriority;
    }
    // Same priority: sort alphabetically by name
    return a.name.localeCompare(b.name, 'pt');
  });
}

export function getStaticPaths() {
  return [{ params: { lang: undefined } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const currentLang: Language = (lang as Language) || defaultLang;
const t = useTranslations(currentLang);

// Fetch Palmarés data from CMS (with fallback)
const palmaresData = await getPalmaresYears();

// Calculate statistics
const totalAwards = palmaresData.reduce((total, year) => {
  return total + year.festivals.reduce((festTotal, fest) => festTotal + fest.awards.length, 0);
}, 0);

const totalFestivals = palmaresData.reduce((total, year) => total + year.festivals.length, 0);

const melhorTunaCount = palmaresData.reduce((total, year) => {
  return (
    total +
    year.festivals.reduce((festTotal, fest) => {
      return festTotal + fest.awards.filter((a) => a.slug === 'melhor-tuna').length;
    }, 0)
  );
}, 0);
---

<Layout title={`${t('palmares.title')} | Tunadão 1998`} description={t('palmares.description')}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero__title">{t('palmares.title')}</h1>
      <p class="hero__subtitle">{t('palmares.subtitle')}</p>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats">
    <div class="container">
      <div class="stats__grid">
        <div class="stats__item">
          <span class="stats__value">{totalAwards}+</span>
          <span class="stats__label">{t('palmares.stats.awards')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{totalFestivals}</span>
          <span class="stats__label">{t('palmares.stats.festivals')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{melhorTunaCount}</span>
          <span class="stats__label">{t('palmares.stats.bestTuna')}</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{palmaresData.length}</span>
          <span class="stats__label">{t('palmares.stats.yearsOfAwards')}</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="palmares-timeline">
    <div class="container">
      {
        palmaresData.map((yearData) => (
          <div class="year-section" id={`year-${yearData.year}`}>
            <div class="year-header">
              <h2 class="year-title">{yearData.year}</h2>
              <span class="year-count">
                {yearData.festivals.reduce((total, f) => total + f.awards.length, 0)}{' '}
                {t('palmares.awardsCount')}
              </span>
            </div>
            <div class="festivals-grid">
              {yearData.festivals.map((festival) => {
                const sortedAwards = sortAwards(festival.awards);
                const hasTopPrize = sortedAwards.length > 0 && ['melhor-tuna', 'tuna-mais-tuna', 'tuna-do-publico'].includes(sortedAwards[0].slug);
                const hasNoAwards = sortedAwards.length === 0;
                const festivalInitial = festival.name.charAt(0).toUpperCase();

                return (
                  <article class:list={['festival-card', { 'festival-card--featured': hasTopPrize }]}>
                    {/* Poster Section */}
                    <div class="festival-card__poster">
                      {festival.posterUrl ? (
                        <button
                          type="button"
                          class="festival-card__poster-button"
                          data-poster-url={festival.posterUrl}
                          data-poster-alt={`Cartaz ${festival.name}`}
                        >
                          <img
                            src={festival.posterUrl}
                            alt={`Cartaz ${festival.name}`}
                            class="festival-card__poster-image"
                            loading="lazy"
                          />
                          <span class="festival-card__poster-zoom">
                            <Icon name="zoom-in" size={20} />
                          </span>
                        </button>
                      ) : (
                        <div class="festival-card__poster-placeholder">
                          <div class="festival-card__poster-pattern">
                            <span class="festival-card__poster-initial">{festivalInitial}</span>
                          </div>
                          <div class="festival-card__poster-notes">
                            <span>♪</span>
                            <span>♫</span>
                            <span>♪</span>
                          </div>
                        </div>
                      )}
                    </div>

                    {/* Content Section */}
                    <div class="festival-card__content">
                      <header class="festival-card__header">
                        <h3 class="festival-card__name">{festival.name}</h3>
                        {festival.location && (
                          <p class="festival-card__location">
                            <Icon name="map-pin" size={14} />
                            <span>{festival.location}</span>
                          </p>
                        )}
                      </header>

                      {/* Organizer */}
                      {festival.organizingTuna && (
                        <div class="festival-card__organizer">
                          <div class="festival-card__organizer-avatar">
                            {festival.organizingTuna.logoUrl ? (
                              <img
                                src={festival.organizingTuna.logoUrl}
                                alt={festival.organizingTuna.shortName}
                                loading="lazy"
                              />
                            ) : (
                              <span class="festival-card__organizer-initial">
                                {festival.organizingTuna.shortName.charAt(0)}
                              </span>
                            )}
                          </div>
                          <div class="festival-card__organizer-info">
                            <span class="festival-card__organizer-label">Organização</span>
                            {festival.organizingTuna.website ? (
                              <a
                                href={festival.organizingTuna.website}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="festival-card__organizer-name"
                                title={festival.organizingTuna.fullName}
                              >
                                {festival.organizingTuna.shortName}
                              </a>
                            ) : (
                              <span class="festival-card__organizer-name" title={festival.organizingTuna.fullName}>
                                {festival.organizingTuna.shortName}
                              </span>
                            )}
                          </div>
                        </div>
                      )}

                      {/* Awards */}
                      <footer class="festival-card__awards">
                        {hasNoAwards ? (
                          <Award awardKey="premio-participacao" size="sm">Participação</Award>
                        ) : (
                          sortedAwards.map((award) => (
                            <Award awardKey={award.slug} size="sm">{award.name}</Award>
                          ))
                        )}
                      </footer>
                    </div>
                  </article>
                );
              })}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Lightbox Overlay -->
  <div id="poster-lightbox" class="lightbox" aria-hidden="true">
    <button type="button" class="lightbox__close" aria-label={t('common.close')}>&times;</button>
    <div class="lightbox__content">
      <img src="" alt="" class="lightbox__image" />
    </div>
  </div>
</Layout>

<script is:inline>
  (function() {
    function initLightbox() {
      const lightbox = document.getElementById('poster-lightbox');
      const lightboxImage = lightbox?.querySelector('.lightbox__image');
      const closeButton = lightbox?.querySelector('.lightbox__close');

      if (!lightbox || !lightboxImage) return;

      // Open lightbox when clicking on poster
      document.querySelectorAll('.festival-card__poster-button[data-poster-url]').forEach(function(button) {
        button.addEventListener('click', function() {
          const url = button.getAttribute('data-poster-url');
          const alt = button.getAttribute('data-poster-alt') || '';
          if (url) {
            lightboxImage.src = url;
            lightboxImage.alt = alt;
            lightbox.classList.add('is-open');
            lightbox.setAttribute('aria-hidden', 'false');
            document.body.style.overflow = 'hidden';
          }
        });
      });

      // Close lightbox
      function closeLightbox() {
        lightbox.classList.remove('is-open');
        lightbox.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }

      closeButton?.addEventListener('click', closeLightbox);
      lightbox.addEventListener('click', function(e) {
        if (e.target === lightbox) closeLightbox();
      });
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && lightbox.classList.contains('is-open')) {
          closeLightbox();
        }
      });
    }

    // Run when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLightbox);
    } else {
      initLightbox();
    }
  })();
</script>

