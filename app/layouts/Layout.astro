---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Tunadão 1998 - Tuna do Instituto Politécnico de Viseu' } =
  Astro.props;
---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #29166f;
    --color-secondary: #bf0029;
    --color-neutral: #888b8b;
    --color-background: #ffffff;
    --color-background-alt: #f8f9fa;
    --color-text: #1a1a1a;
    --color-text-muted: #666666;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
    background-color: var(--color-background);
    color: var(--color-text);
  }

  body {
    min-height: 100vh;
  }
</style>
