{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@layouts/*": ["app/layouts/*"],
      "@pages/*": ["app/pages/*"],
      "@styles/*": ["app/styles/*"],
      "@utils/*": ["app/utils/*"],
      "@i18n/*": ["app/i18n/*"],
      "@assets/*": ["app/assets/*"],
      "@data/*": ["app/data/*"],
      "@lib/*": ["app/lib/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": ["app/**/*", "astro.config.mjs"],
  "exclude": ["node_modules", "dist", "cms"]
}
